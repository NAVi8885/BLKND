<div class="search-container">
    <button class="search-toggle" id="searchToggle" style="<%= typeof searchIconColor !== 'undefined' ? 'color:' + searchIconColor : '' %>">
        <i class="fas fa-search"></i>
    </button>
    <div class="search-input-wrapper">
        <form action="/shop" method="GET">
            <input type="text" name="search" class="search-input-inline" placeholder="Search..." autocomplete="off">
            <button type="submit" class="search-enter-btn"><i class="fas fa-arrow-right"></i></button>
        </form>
    </div>
</div>

<style>
    .search-container {
        position: relative;
        display: inline-flex;
        align-items: center;
        margin-left: 20px;
    }

    .search-toggle {
        background: none;
        border: none;
        font-size: 18px;
        color: inherit; /* Inherit from navbar */
        cursor: pointer;
        padding: 5px;
        z-index: 2;
        transition: transform 0.3s ease;
    }

    .search-input-wrapper {
        position: absolute;
        right: 0; /* Align to the right of the container */
        top: 50%;
        transform: translateY(-50%);
        width: 0;
        overflow: hidden;
        background: #fff;
        border-radius: 30px;
        transition: width 0.4s cubic-bezier(0.18, 0.89, 0.32, 1.28), box-shadow 0.3s ease;
        z-index: 1; /* Behind the icon initially, but we need it clickable */
        opacity: 0;
        visibility: hidden;
    }

    /* Active State */
    .search-container.active .search-input-wrapper {
        width: 250px;
        opacity: 1;
        visibility: visible;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        right: 35px; /* Push out to the left of the icon */
    }

    .search-container.active .search-toggle {
        transform: scale(0.8); /* Slight shrink effect */
    }

    .search-input-inline {
        width: 100%;
        border: none;
        padding: 8px 15px;
        padding-right: 35px; /* Space for arrow button */
        font-size: 14px;
        outline: none;
        background: transparent;
        color: #212529;
    }

    .search-enter-btn {
        position: absolute;
        right: 5px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #212529;
        font-size: 12px;
        cursor: pointer;
        opacity: 0.6;
        transition: opacity 0.2s;
    }

    .search-enter-btn:hover {
        opacity: 1;
    }

</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const container = document.querySelector('.search-container');
        const toggle = document.querySelector('#searchToggle');
        const input = document.querySelector('.search-input-inline');

        if(container && toggle) {
            toggle.addEventListener('click', (e) => {
                e.preventDefault();
                e.stopPropagation();
                container.classList.toggle('active');
                
                if (container.classList.contains('active')) {
                    setTimeout(() => input.focus(), 100);
                }
            });

            // Close when clicking outside
            document.addEventListener('click', (e) => {
                if (!container.contains(e.target)) {
                    container.classList.remove('active');
                }
            });

            // Close on Escape
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    container.classList.remove('active');
                }
            });
        }
    });
</script>
