<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Admin • Settings</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    :root {
      --side: 260px
    }

    body {
      background: #f8f9fa;
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial
    }

    .sidebar {
      position: fixed;
      inset: 0 auto 0 0;
      width: var(--side);
      background: #d8d8d8da;
      border-right: 1px solid #e9ecef;
      padding: 20px;
      overflow-y: auto
    }
    
    .brand {
      font-weight: 700;
      letter-spacing: .5px;
      color: var(--dark);
      text-decoration: none;
    }

    .nav-aside .nav-link {
      color: #212529;
      padding: 10px 12px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .nav-aside .nav-link.active,
    .nav-aside .nav-link:hover {
      background: #000000da;
      color: #f8f9fa;
      font-weight: 500;
    }

    .content {
      margin-left: var(--side)
    }

    .topbar {
      position: sticky;
      top: 0;
      z-index: 10;
      background: #d8d8d8;
      border-bottom: 1px solid #e9ecef;
      text-align: center;
      padding: 10px 0;
      font-size: 1.50rem;
    }

    .subnav .list-group-item {
      border: 0;
      border-radius: 8px
    }

    .subnav .list-group-item.active {
      background: #212529;
      color: #fff
    }

    .code {
      font-family: ui-monospace, SFMono-Regular, Menlo, Consolas, monospace
    }

    .muted {
      color: #6c757d
    }

    @media(max-width:992px) {
      .sidebar {
        transform: translateX(-100%);
        transition: transform .3s;
        z-index: 1000;
      }

      .sidebar.show {
        transform: translateX(0)
      }

      .content {
        margin-left: 0
      }
    }
  </style>
</head>

<body>
  <!-- Sidebar -->
  <%- include('partials/sidebar', { page: 'settings' }) %>

  <!-- Main -->
  <main class="content">
    <!-- Topbar -->
    <header class="topbar">
      <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between py-2">
          <div class="d-flex align-items-center gap-2">
            <button class="btn btn-outline-secondary d-lg-none"
              onclick="document.getElementById('sidebar').classList.toggle('show')">
              <i class="fa-solid fa-bars"></i>
            </button>
            <span class="fw-bold">Settings</span>
          </div>
          <div class="d-flex align-items-center gap-2">
            <a href="../user/login.html" class="btn btn-dark text-whitebtn-outline-secondary"><i
                class="fa-solid fa-right-from-bracket me-1"></i> Logout</a>
          </div>
        </div>
      </div>
    </header>

    <!-- Settings Body -->
    <section class="container-fluid py-3">
      <div class="row g-3">
        <!-- Left subnav -->
        <div class="col-lg-3">
          <div class="list-group subnav" id="settingsTabs" role="tablist">
            <a href="#general" class="list-group-item list-group-item-action active" data-bs-toggle="list"
              role="tab">General</a>
            <a href="#payments" class="list-group-item list-group-item-action" data-bs-toggle="list"
              role="tab">Payments</a>
            <a href="#shipping" class="list-group-item list-group-item-action" data-bs-toggle="list"
              role="tab">Shipping</a>
            <a href="#tax" class="list-group-item list-group-item-action" data-bs-toggle="list" role="tab">Tax</a>
            <a href="#emails" class="list-group-item list-group-item-action" data-bs-toggle="list" role="tab">Emails</a>
            <a href="#roles" class="list-group-item list-group-item-action" data-bs-toggle="list" role="tab">Roles &
              Permissions</a>
            <a href="#security" class="list-group-item list-group-item-action" data-bs-toggle="list"
              role="tab">Security</a>
            <a href="#api" class="list-group-item list-group-item-action" data-bs-toggle="list" role="tab">API &
              Webhooks</a>
          </div>
        </div>

        <!-- Right content -->
        <div class="col-lg-9">
          <div class="tab-content">
            <!-- General -->
            <div class="tab-pane fade show active" id="general" role="tabpanel">
              <div class="card mb-3">
                <div class="card-header fw-semibold">Store details</div>
                <div class="card-body">
                  <div class="row g-3">
                    <div class="col-md-6"><label class="form-label">Store name</label><input class="form-control"
                        value="KAIRA"></div>
                    <div class="col-md-3"><label class="form-label">Currency</label><select class="form-select">
                        <option>USD ($)</option>
                        <option selected>INR (₹)</option>
                        <option>EUR (€)</option>
                      </select></div>
                    <div class="col-md-3"><label class="form-label">Timezone</label><select class="form-select">
                        <option selected>Asia/Kolkata</option>
                        <option>UTC</option>
                        <option>America/New_York</option>
                      </select></div>
                    <div class="col-12"><label class="form-label">Address</label><input class="form-control"
                        placeholder="Street, City, State, ZIP"></div>
                    <div class="col-md-6"><label class="form-label">Support email</label><input type="email"
                        class="form-control" value="support@kaira.com"></div>
                    <div class="col-md-6"><label class="form-label">Support phone</label><input type="tel"
                        class="form-control" value="+91 9876543210"></div>
                    <div class="col-md-6"><label class="form-label">Legal business name</label><input
                        class="form-control" placeholder="Kaira Retail Pvt Ltd"></div>
                    <div class="col-md-6"><label class="form-label">GST/VAT Number</label><input class="form-control"
                        placeholder="GSTIN / VAT ID"></div>
                  </div>
                </div>
                <div class="card-footer text-end"><button class="btn btn-dark">Save changes</button></div>
              </div>

              <div class="card">
                <div class="card-header fw-semibold">Branding</div>
                <div class="card-body">
                  <div class="row g-3 align-items-end">
                    <div class="col-md-6">
                      <label class="form-label">Primary color</label>
                      <input type="color" class="form-control form-control-color" value="#212529" title="Choose color">
                    </div>
                    <div class="col-md-6">
                      <label class="form-label">Logo</label>
                      <input type="file" class="form-control">
                      <div class="form-text">PNG/SVG, up to 1 MB</div>
                    </div>
                  </div>
                </div>
                <div class="card-footer text-end"><button class="btn btn-outline-secondary">Preview</button> <button
                    class="btn btn-dark">Save branding</button></div>
              </div>
            </div>

            <!-- Payments -->
            <div class="tab-pane fade" id="payments" role="tabpanel">
              <div class="card mb-3">
                <div class="card-header fw-semibold">Payment gateways</div>
                <div class="card-body">
                  <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                      <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="cod" checked>
                        <label class="form-check-label" for="cod">Cash on Delivery</label>
                      </div>
                    </div>
                    <div class="col-md-8"></div>

                    <div class="col-md-4">
                      <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="razor">
                        <label class="form-check-label" for="razor">Razorpay</label>
                      </div>
                    </div>
                    <div class="col-md-8">
                      <div class="row g-2">
                        <div class="col-6"><input class="form-control" placeholder="Key ID"></div>
                        <div class="col-6"><input class="form-control" placeholder="Key Secret"></div>
                      </div>
                    </div>

                    <div class="col-md-4">
                      <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="stripe">
                        <label class="form-check-label" for="stripe">Stripe</label>
                      </div>
                    </div>
                    <div class="col-md-8">
                      <div class="row g-2">
                        <div class="col-6"><input class="form-control" placeholder="Publishable key"></div>
                        <div class="col-6"><input class="form-control" placeholder="Secret key"></div>
                      </div>
                    </div>

                    <div class="col-md-4">
                      <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="paypal">
                        <label class="form-check-label" for="paypal">PayPal</label>
                      </div>
                    </div>
                    <div class="col-md-8">
                      <div class="row g-2">
                        <div class="col-6"><input class="form-control" placeholder="Client ID"></div>
                        <div class="col-6"><input class="form-control" placeholder="Client Secret"></div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="card-footer text-end"><button class="btn btn-dark">Save payment settings</button></div>
              </div>

              <div class="card">
                <div class="card-header fw-semibold">Checkout preferences</div>
                <div class="card-body">
                  <div class="row g-3">
                    <div class="col-md-6">
                      <label class="form-label">Checkout mode</label>
                      <select class="form-select">
                        <option>Guest + Account</option>
                        <option>Accounts required</option>
                        <option>Guest only</option>
                      </select>
                    </div>
                    <div class="col-md-6">
                      <label class="form-label">Default payment capture</label>
                      <select class="form-select">
                        <option>Immediate capture</option>
                        <option>Authorize only</option>
                      </select>
                    </div>
                    <div class="col-12">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="saveCards" checked>
                        <label class="form-check-label" for="saveCards">Offer to save cards (tokenized)</label>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="card-footer text-end"><button class="btn btn-dark">Save checkout preferences</button></div>
              </div>
            </div>

            <!-- Shipping -->
            <div class="tab-pane fade" id="shipping" role="tabpanel">
              <div class="card mb-3">
                <div class="card-header fw-semibold d-flex justify-content-between align-items-center">
                  Shipping zones
                  <button class="btn btn-sm btn-dark" data-bs-toggle="modal" data-bs-target="#zoneModal"><i
                      class="fa-solid fa-plus me-1"></i> Add zone</button>
                </div>
                <div class="table-responsive">
                  <table class="table align-middle mb-0">
                    <thead class="table-light">
                      <tr>
                        <th>Zone</th>
                        <th>Regions</th>
                        <th>Rates</th>
                        <th style="width:120px">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>India</td>
                        <td>All states</td>
                        <td>Standard: ₹199, Express: ₹499</td>
                        <td class="text-nowrap">
                          <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary" data-bs-toggle="modal"
                              data-bs-target="#zoneModal"><i class="fa-regular fa-pen-to-square"></i></button>
                            <button class="btn btn-outline-danger"><i class="fa-regular fa-trash-can"></i></button>
                          </div>
                        </td>
                      </tr>
                      <tr>
                        <td>International</td>
                        <td>US, UK, EU, UAE</td>
                        <td>Standard: $15, Express: $35</td>
                        <td class="text-nowrap">
                          <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary" data-bs-toggle="modal"
                              data-bs-target="#zoneModal"><i class="fa-regular fa-pen-to-square"></i></button>
                            <button class="btn btn-outline-danger"><i class="fa-regular fa-trash-can"></i></button>
                          </div>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>

              <div class="card">
                <div class="card-header fw-semibold">Packaging & handling</div>
                <div class="card-body">
                  <div class="row g-3">
                    <div class="col-md-4"><label class="form-label">Default weight (kg)</label><input type="number"
                        step="0.01" class="form-control" value="0.5"></div>
                    <div class="col-md-4"><label class="form-label">Box size (cm)</label>
                      <div class="input-group"><input class="form-control" placeholder="L"><span
                          class="input-group-text">x</span><input class="form-control" placeholder="W"><span
                          class="input-group-text">x</span><input class="form-control" placeholder="H"></div>
                    </div>
                    <div class="col-md-4"><label class="form-label">Handling fee</label>
                      <div class="input-group"><span class="input-group-text">₹</span><input type="number" step="0.01"
                          class="form-control" value="0.00"></div>
                    </div>
                  </div>
                </div>
                <div class="card-footer text-end"><button class="btn btn-dark">Save shipping settings</button></div>
              </div>
            </div>

            <!-- Tax -->
            <div class="tab-pane fade" id="tax" role="tabpanel">
              <div class="card mb-3">
                <div class="card-header fw-semibold d-flex justify-content-between align-items-center">
                  Tax rates
                  <button class="btn btn-sm btn-dark" data-bs-toggle="modal" data-bs-target="#taxModal"><i
                      class="fa-solid fa-plus me-1"></i> Add rate</button>
                </div>
                <div class="table-responsive">
                  <table class="table align-middle mb-0">
                    <thead class="table-light">
                      <tr>
                        <th>Region</th>
                        <th>Tax name</th>
                        <th>Rate</th>
                        <th>Inclusive</th>
                        <th style="width:120px">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>India</td>
                        <td>GST</td>
                        <td>18%</td>
                        <td><span class="badge text-bg-secondary">No</span></td>
                        <td class="text-nowrap">
                          <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary" data-bs-toggle="modal"
                              data-bs-target="#taxModal"><i class="fa-regular fa-pen-to-square"></i></button>
                            <button class="btn btn-outline-danger"><i class="fa-regular fa-trash-can"></i></button>
                          </div>
                        </td>
                      </tr>
                      <tr>
                        <td>US</td>
                        <td>Sales Tax</td>
                        <td>8.25%</td>
                        <td><span class="badge text-bg-secondary">No</span></td>
                        <td class="text-nowrap">
                          <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary" data-bs-toggle="modal"
                              data-bs-target="#taxModal"><i class="fa-regular fa-pen-to-square"></i></button>
                            <button class="btn btn-outline-danger"><i class="fa-regular fa-trash-can"></i></button>
                          </div>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>

              <div class="card">
                <div class="card-header fw-semibold">Calculation options</div>
                <div class="card-body">
                  <div class="row g-3">
                    <div class="col-md-4">
                      <label class="form-label">Prices include tax</label>
                      <select class="form-select">
                        <option>No</option>
                        <option>Yes</option>
                      </select>
                    </div>
                    <div class="col-md-4">
                      <label class="form-label">Rounding</label>
                      <select class="form-select">
                        <option>Line item</option>
                        <option>Order total</option>
                      </select>
                    </div>
                    <div class="col-md-4">
                      <label class="form-label">Shipping taxable</label>
                      <select class="form-select">
                        <option>Yes</option>
                        <option>No</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="card-footer text-end"><button class="btn btn-dark">Save tax settings</button></div>
              </div>
            </div>

            <!-- Emails -->
            <div class="tab-pane fade" id="emails" role="tabpanel">
              <div class="card mb-3">
                <div class="card-header fw-semibold">Sender & notifications</div>
                <div class="card-body">
                  <div class="row g-3">
                    <div class="col-md-6"><label class="form-label">From name</label><input class="form-control"
                        value="Kaira Store"></div>
                    <div class="col-md-6"><label class="form-label">From email</label><input type="email"
                        class="form-control" value="noreply@kaira.com"></div>
                    <div class="col-12">
                      <div class="form-check"><input class="form-check-input" type="checkbox" id="bccSupport"
                          checked><label class="form-check-label" for="bccSupport">BCC support on all order
                          emails</label></div>
                    </div>
                  </div>
                </div>
                <div class="card-footer text-end"><button class="btn btn-dark">Save sender</button></div>
              </div>

              <div class="card">
                <div class="card-header fw-semibold d-flex justify-content-between align-items-center">
                  Templates
                  <div class="d-flex align-items-center gap-2">
                    <input type="email" class="form-control form-control-sm" placeholder="test@yourmail.com"
                      style="width:220px">
                    <button class="btn btn-sm btn-outline-secondary">Send test</button>
                  </div>
                </div>
                <div class="table-responsive">
                  <table class="table align-middle mb-0">
                    <thead class="table-light">
                      <tr>
                        <th>Template</th>
                        <th>Description</th>
                        <th>Enabled</th>
                        <th style="width:150px">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>Order confirmation</td>
                        <td class="muted">Sent after successful payment</td>
                        <td>
                          <div class="form-check form-switch mb-0"><input class="form-check-input" type="checkbox"
                              checked></div>
                        </td>
                        <td class="text-nowrap"><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal"
                            data-bs-target="#emailPreview"><i class="fa-regular fa-eye"></i></button> <button
                            class="btn btn-sm btn-outline-secondary"><i
                              class="fa-regular fa-pen-to-square"></i></button></td>
                      </tr>
                      <tr>
                        <td>Shipping update</td>
                        <td class="muted">Tracking number and carrier</td>
                        <td>
                          <div class="form-check form-switch mb-0"><input class="form-check-input" type="checkbox"
                              checked></div>
                        </td>
                        <td class="text-nowrap"><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal"
                            data-bs-target="#emailPreview"><i class="fa-regular fa-eye"></i></button> <button
                            class="btn btn-sm btn-outline-secondary"><i
                              class="fa-regular fa-pen-to-square"></i></button></td>
                      </tr>
                      <tr>
                        <td>Password reset</td>
                        <td class="muted">Reset link for customers</td>
                        <td>
                          <div class="form-check form-switch mb-0"><input class="form-check-input" type="checkbox"
                              checked></div>
                        </td>
                        <td class="text-nowrap"><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal"
                            data-bs-target="#emailPreview"><i class="fa-regular fa-eye"></i></button> <button
                            class="btn btn-sm btn-outline-secondary"><i
                              class="fa-regular fa-pen-to-square"></i></button></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

            <!-- Roles -->
            <div class="tab-pane fade" id="roles" role="tabpanel">
              <div class="card mb-3">
                <div class="card-header fw-semibold d-flex justify-content-between align-items-center">
                  Roles & permissions
                  <button class="btn btn-sm btn-dark" data-bs-toggle="modal" data-bs-target="#roleModal"><i
                      class="fa-solid fa-plus me-1"></i> New role</button>
                </div>
                <div class="table-responsive">
                  <table class="table align-middle mb-0">
                    <thead class="table-light">
                      <tr>
                        <th>Role</th>
                        <th>Members</th>
                        <th>Modules</th>
                        <th style="width:140px">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>Owner</td>
                        <td>1</td>
                        <td>All</td>
                        <td class="text-nowrap"><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal"
                            data-bs-target="#roleModal"><i class="fa-regular fa-pen-to-square"></i></button> <button
                            class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-users-gear"></i></button>
                        </td>
                      </tr>
                      <tr>
                        <td>Manager</td>
                        <td>3</td>
                        <td>Orders, Products, Customers, Coupons</td>
                        <td class="text-nowrap"><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal"
                            data-bs-target="#roleModal"><i class="fa-regular fa-pen-to-square"></i></button> <button
                            class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-users-gear"></i></button>
                        </td>
                      </tr>
                      <tr>
                        <td>Support</td>
                        <td>4</td>
                        <td>Orders, Customers</td>
                        <td class="text-nowrap"><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal"
                            data-bs-target="#roleModal"><i class="fa-regular fa-pen-to-square"></i></button> <button
                            class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-users-gear"></i></button>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>

              <div class="card">
                <div class="card-header fw-semibold">Invite team member</div>
                <div class="card-body">
                  <div class="row g-3">
                    <div class="col-md-6"><label class="form-label">Email</label><input type="email"
                        class="form-control" placeholder="user@company.com"></div>
                    <div class="col-md-4"><label class="form-label">Role</label><select class="form-select">
                        <option>Manager</option>
                        <option>Support</option>
                        <option>Viewer</option>
                      </select></div>
                    <div class="col-md-2 d-grid"><label class="form-label invisible">.</label><button
                        class="btn btn-dark">Invite</button></div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Security -->
            <div class="tab-pane fade" id="security" role="tabpanel">
              <div class="card mb-3">
                <div class="card-header fw-semibold">Authentication</div>
                <div class="card-body">
                  <div class="row g-3">
                    <div class="col-md-4">
                      <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="enforce2fa" checked>
                        <label class="form-check-label" for="enforce2fa">Enforce 2‑factor for staff</label>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <label class="form-label">Session timeout</label>
                      <select class="form-select">
                        <option>30 minutes</option>
                        <option>60 minutes</option>
                        <option>90 minutes</option>
                      </select>
                    </div>
                    <div class="col-md-4">
                      <label class="form-label">Password policy</label>
                      <select class="form-select">
                        <option>Standard (8+ chars)</option>
                        <option>Strict (12+ chars, symbols)</option>
                      </select>
                    </div>
                    <div class="col-12">
                      <label class="form-label">IP allowlist (comma separated)</label>
                      <input class="form-control" placeholder="123.45.67.89, 10.0.0.0/24">
                      <div class="form-text">Restrict admin access to these IPs</div>
