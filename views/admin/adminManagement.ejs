<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Admin â€¢ Admin Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    :root {
      --side: 260px;
      --dark: #212529;
      --muted: #6c757d;
    }

    body {
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      background: #f8f9fa;
    }

    .sidebar {
      position: fixed;
      inset: 0 auto 0 0;
      width: var(--side);
      background: #d8d8d8da;
      border-right: 1px solid #e9ecef;
      padding: 20px;
      overflow-y: auto;
    }

    .brand {
      font-weight: 700;
      letter-spacing: .5px;
      color: var(--dark);
      text-decoration: none;
    }

    .nav-aside .nav-link {
      color: #212529;
      padding: 10px 12px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .nav-aside .nav-link.active,
    .nav-aside .nav-link:hover {
      background: #000000da;
      color: #f8f9fa;
      font-weight: 500;
    }

    .content {
      margin-left: var(--side);
      min-height: 100vh;
    }

    .topbar {
      position: sticky;
      top: 0;
      z-index: 10;
      background: #d8d8d8;
      border-bottom: 1px solid #e9ecef;
      text-align: center;
      padding: 10px 0;
      font-size: 1.50rem;
    }

    @media (max-width: 992px) {
      .sidebar {
        position: fixed;
        transform: translateX(-100%);
        transition: transform .3s ease;
        z-index: 1000;
      }

      .sidebar.show {
        transform: translateX(0);
      }

      .content {
        margin-left: 0;
      }
    }
  </style>
</head>

<body>
  <%- include('partials/sidebar', { page: 'admin-management' }) %>

  <main class="content">
    <header class="topbar">
      <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between py-2">
          <div class="d-flex align-items-center gap-2">
            <button class="btn btn-outline-secondary d-lg-none"
              onclick="document.getElementById('sidebar').classList.toggle('show')">
              <i class="fa-solid fa-bars"></i>
            </button>
            <span class="fw-bold">Admin Management</span>
          </div>
          <div class="dropdown">
            <button class="btn btn-dark btn-sm dropdown-toggle" data-bs-toggle="dropdown"><i
                class="fa-regular fa-user"></i> Admin</button>
            <div class="dropdown-menu dropdown-menu-end">
              <a class="dropdown-item" href="/settings">Account</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/logout">Logout</a>
            </div>
          </div>
        </div>
      </div>
    </header>

    <div class="container-fluid py-4">
      
      <!-- Notifications -->
      <% if (success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <!-- Header actions -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
           <h4 class="mb-0">Sub-Admins</h4>
           <div class="text-muted small">Manage access and roles</div>
        </div>
        <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="fa-solid fa-plus me-1"></i> Create Sub-Admin
        </button>
      </div>

      <!-- Admin List -->
      <div class="card">
        <div class="table-responsive">
          <table class="table align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Permissions</th>
                <th>Status</th>
                <th>Created</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if(subAdmins && subAdmins.length > 0) { %>
                <% subAdmins.forEach(admin => { %>
                  <tr>
                    <td>
                        <div class="fw-semibold"><%= admin.name %></div>
                    </td>
                    <td><%= admin.email %></td>
                    <td>
                        <span class="badge bg-secondary"><%= admin.permissions ? admin.permissions.length : 0 %> active</span>
                    </td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" 
                                   onchange="toggleStatus('<%= admin._id %>')" 
                                   <%= admin.isActive ? 'checked' : '' %>>
                            <label class="form-check-label small text-muted"><%= admin.isActive ? 'Active' : 'Inactive' %></label>
                        </div>
                    </td>
                    <td><%= new Date(admin.createdAt).toLocaleDateString() %></td>
                    <td>
                        <button class="btn btn-sm btn-outline-dark" 
                                onclick="openEditModal('<%= admin._id %>', '<%= admin.name %>', '<%= JSON.stringify(admin.permissions || []) %>')">
                            Edit
                        </button>
                        <a href="/admin-management/delete/<%= admin._id %>" class="btn btn-sm btn-outline-danger" 
                           onclick="return confirm('Are you sure you want to delete this sub-admin? This action cannot be undone.')">
                            Delete
                        </a>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                    <td colspan="6" class="text-center py-4 text-muted">No sub-admins found. Create one to get started.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>

  <!-- Create Modal -->
  <div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <form class="modal-content" action="/admin-management/create" method="POST">
        <div class="modal-header">
          <h5 class="modal-title">Create New Sub-Admin</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label class="form-label">Name</label>
                    <input type="text" name="name" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" required>
                </div>
                <div class="col-12">
                    <label class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" required>
                </div>
            </div>

            <h6 class="mb-3 border-bottom pb-2">Assign Permissions</h6>
            <div class="row g-3">
                <% availablePermissions.forEach(group => { %>
                    <div class="col-md-6">
                        <div class="card h-100 bg-light border-0">
                            <div class="card-body py-2">
                                <div class="fw-bold mb-2 small text-uppercase text-muted"><%= group.category %></div>
                                <% group.items.forEach(perm => { %>
                                    <div class="form-check mb-1">
                                        <input class="form-check-input" type="checkbox" name="permissions" value="<%= perm.key %>" id="create_<%= perm.key %>">
                                        <label class="form-check-label" for="create_<%= perm.key %>"><%= perm.label %></label>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-dark">Create Sub-Admin</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Edit Modal -->
  <div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <form class="modal-content" id="editForm" method="POST">
        <div class="modal-header">
          <h5 class="modal-title">Edit Sub-Admin</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
            <div class="mb-4">
                <label class="form-label">Name</label>
                <input type="text" name="name" id="editName" class="form-control" required>
                <div class="form-text">Email and password cannot be changed here.</div>
            </div>

            <h6 class="mb-3 border-bottom pb-2">Update Permissions</h6>
            <div class="row g-3">
                <% availablePermissions.forEach(group => { %>
                    <div class="col-md-6">
                        <div class="card h-100 bg-light border-0">
                            <div class="card-body py-2">
                                <div class="fw-bold mb-2 small text-uppercase text-muted"><%= group.category %></div>
                                <% group.items.forEach(perm => { %>
                                    <div class="form-check mb-1">
                                        <input class="form-check-input edit-perm" type="checkbox" name="permissions" value="<%= perm.key %>" id="edit_<%= perm.key %>">
                                        <label class="form-check-label" for="edit_<%= perm.key %>"><%= perm.label %></label>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-dark">Save Changes</button>
        </div>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function openEditModal(id, name, permissionsJson) {
        // Set form action
        document.getElementById('editForm').action = `/admin-management/edit/${id}`;
        
        // Set name
        document.getElementById('editName').value = name;
        
        // Reset and Set permissions
        document.querySelectorAll('.edit-perm').forEach(cb => cb.checked = false);
        
        try {
            const permissions = JSON.parse(permissionsJson);
            permissions.forEach(perm => {
                const cb = document.getElementById(`edit_${perm}`);
                if (cb) cb.checked = true;
            });
        } catch (e) {
            console.error(e);
        }
        
        // Show modal
        new bootstrap.Modal(document.getElementById('editModal')).show();
    }

    async function toggleStatus(id) {
        try {
            const res = await fetch(`/admin-management/toggle-status/${id}`, { method: 'POST' });
            const data = await res.json();
            if (!data.success) {
                alert('Failed to update status');
                location.reload();
            } else {
                location.reload(); // Reload to update label/badge if needed
            }
        } catch (error) {
            console.error(error);
            alert('Error updating status');
        }
    }
  </script>
</body>
</html>
