<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Admin • Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    :root {
      --side: 260px;
      --dark: #212529;
      --muted: #6c757d;
    }

    body {
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      background: #f8f9fa;
    }

    .sidebar {
      position: fixed;
      inset: 0 auto 0 0;
      width: var(--side);
      background: #d8d8d8da;
      border-right: 1px solid #e9ecef;
      padding: 20px;
      overflow-y: auto;
    }

    .brand {
      font-weight: 700;
      letter-spacing: .5px;
      color: var(--dark);
      text-decoration: none;
    }

    .nav-aside .nav-link {
      color: #212529;
      padding: 10px 12px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .nav-aside .nav-link.active,
    .nav-aside .nav-link:hover {
      background: #000000da;
      color: #f8f9fa;
      font-weight: 500;
    }

    .content {
      margin-left: var(--side);
      min-height: 100vh;
    }

    .topbar {
      position: sticky;
      top: 0;
      z-index: 10;
      background: #d8d8d8;
      border-bottom: 1px solid #e9ecef;
      text-align: center;
      padding: 10px 0;
      font-size: 1.50rem;
    }

    .kpi-card .title {
      color: var(--muted);
      font-size: .9rem;
    }

    .kpi-card .value {
      font-weight: 700;
      font-size: 1.6rem;
    }

    .table thead th {
      font-weight: 900;
    }

    .status-badge {
      font-size: .75rem;
    }

    @media (max-width: 992px) {
      .sidebar {
        position: fixed;
        transform: translateX(-100%);
        transition: transform .3s ease;
        z-index: 1000;
      }

      .sidebar.show {
        transform: translateX(0);
      }

      .content {
        margin-left: 0;
      }
    }
  </style>
</head>

<body>
  <aside id="sidebar" class="sidebar">
    <a href="/dashboard" class="brand h4 d-block mb-3">BLKND Admin</a>
    <nav class="nav nav-pills flex-column nav-aside">
      <a class="nav-link active" href="/dashboard"><i class="fa-solid fa-gauge-high"></i> Dashboard</a>
      <a class="nav-link" href="/orders"><i class="fa-solid fa-receipt"></i> Orders</a>
      <a class="nav-link" href="/products"><i class="fa-solid fa-shirt"></i> Products</a>
      <a class="nav-link" href="/categories"><i class="fa-solid fa-layer-group"></i> Categories</a>
      <a class="nav-link" href="/customers"><i class="fa-solid fa-user-group"></i> Customers</a>
      <a class="nav-link" href="/coupons"><i class="fa-solid fa-ticket"></i> Coupons</a>
      <a class="nav-link" href="/banners"><i class="fa-solid fa-image"></i> Banners</a>
      <a class="nav-link" href="/settings"><i class="fa-solid fa-gear"></i> Settings</a>
    </nav>
  </aside>

  <main class="content">
    <header class="topbar">
      <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between py-2">
          <div class="d-flex align-items-center gap-2">
            <button class="btn btn-outline-secondary d-lg-none"
              onclick="document.getElementById('sidebar').classList.toggle('show')">
              <i class="fa-solid fa-bars"></i>
            </button>
            <span class="fw-bold">Dashboard</span>
          </div>
          <div class="d-flex align-items-center gap-2">
            <div class="dropdown">
              <button class="btn btn-light dropdown-toggle btn-sm" data-bs-toggle="dropdown"><i
                  class="fa-regular fa-bell"></i> Alerts</button>
              <div class="dropdown-menu dropdown-menu-end">
                <span class="dropdown-item-text text-muted small">No new notifications</span>
              </div>
            </div>
            <div class="dropdown">
              <button class="btn btn-dark btn-sm dropdown-toggle" data-bs-toggle="dropdown"><i
                  class="fa-regular fa-user"></i> Admin</button>
              <div class="dropdown-menu dropdown-menu-end">
                <a class="dropdown-item" href="/settings">Account</a>
                <a class="dropdown-item" href="settings#team">Team</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/logout">Logout</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <section class="container-fluid py-4">
      <div class="row g-3">
        <div class="col-6 col-lg-3">
          <div class="card kpi-card h-100">
            <div class="card-body">
              <div class="title">Revenue (<%= selectedRange %>)</div>
              <div class="value">₹<%= kpi.revenue %></div>
              <div class="text-success small"><i class="fa-solid fa-arrow-up-right-from-square"></i> Live</div>
            </div>
          </div>
        </div>
        <div class="col-6 col-lg-3">
          <div class="card kpi-card h-100">
            <div class="card-body">
              <div class="title">Orders</div>
              <div class="value"><%= kpi.orders %></div>
              <div class="text-success small">Avg Order Value: ₹<%= kpi.orders > 0 ? (parseInt(kpi.revenue.replace(/,/g, '')) / parseInt(kpi.orders.replace(/,/g, ''))).toFixed(0) : 0 %></div>
            </div>
          </div>
        </div>
        <div class="col-6 col-lg-3">
          <div class="card kpi-card h-100">
            <div class="card-body">
              <div class="title">Customers</div>
              <div class="value"><%= kpi.customers %></div>
              <div class="text-primary small">+<%= kpi.newCustomers %> new in range</div>
            </div>
          </div>
        </div>
        <div class="col-6 col-lg-3">
          <div class="card kpi-card h-100">
            <div class="card-body">
              <div class="title">Refund Rate</div>
              <div class="value"><%= kpi.refundRate %>%</div>
              <div class="text-danger small">All time</div>
            </div>
          </div>
        </div>
      </div>

      <div class="row g-3 mt-1">
        <div class="col-lg-8">
          <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
              <span class="fw-semibold">Sales performance</span>
              <div>
                <select class="form-select form-select-sm" onchange="window.location.href='/dashboard?range='+this.value">
                  <option <%= selectedRange === 'Last 30 days' ? 'selected' : '' %>>Last 30 days</option>
                  <option <%= selectedRange === 'Last 90 days' ? 'selected' : '' %>>Last 90 days</option>
                  <option <%= selectedRange === 'This year' ? 'selected' : '' %>>This year</option>
                </select>
              </div>
            </div>
            <div class="card-body">
              nvas id="chartSales" heightght="110"></canvas>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="card h-100">
            <div class="card-header fw-semibold">Top categories</div>
            <div class="card-body">
              <% if(topCategories && topCategories.length > 0) { %>
                <% topCategories.forEach((cat, index) => { 
                     // Calculate percentage based on the top category (just for visual bar)
                     const maxVal = topCategories[0].revenue;
                     const percent = (cat.revenue / maxVal) * 100;
                     const colors = ['bg-dark', 'bg-secondary', 'bg-success', 'bg-info'];
                %>
                <div class="d-flex justify-content-between mb-2">
                    <span><%= cat._id %></span>
                    <span class="fw-semibold">₹<%= cat.revenue.toLocaleString() %></span>
                </div>
                <div class="progress mb-3" style="height:8px;">
                    <div class="progress-bar <%= colors[index % colors.length] %>" style="width:<%= percent %>%"></div>
                </div>
                <% }) %>
              <% } else { %>
                <div class="text-center text-muted py-4">No sales data for this period</div>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <div class="row g-3 mt-1">
        <div class="col-lg-6">
          <div class="card h-100">
            <div class="card-header fw-semibold d-flex justify-content-between align-items-center">
              Recent orders
              <a href="/orders" class="btn btn-sm btn-outline-secondary">View all</a>
            </div>
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Order</th>
                    <th>Date</th>
                    <th>Customer</th>
                    <th>Total</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                <tbody>
                  <% if(recentOrders && recentOrders.length > 0) { %>
                    <% recentOrders.forEach(order => { %>
                    <tr>
                        <td>#<%= order._id.toString().slice(-6).toUpperCase() %></td>
                        <td><%= new Date(order.createdAt).toLocaleDateString('en-US', {month:'short', day:'numeric'}) %></td>
                        <td><%= order.userId ? order.userId.name : 'Unknown' %></td>
                        <td>₹<%= order.totalAmount %></td>
                        <td>
                            <% let badgeClass = 'text-bg-secondary';
                               if(order.orderStatus === 'paid') badgeClass = 'text-bg-success';
                               if(order.orderStatus === 'pending') badgeClass = 'text-bg-warning';
                               if(order.orderStatus === 'shipped') badgeClass = 'text-bg-info';
                               if(order.orderStatus === 'delivered') badgeClass = 'text-bg-success';
                               if(order.orderStatus === 'cancelled') badgeClass = 'text-bg-danger';
                            %>
                            <span class="badge <%= badgeClass %> status-badge"><%= order.orderStatus %></span>
                        </td>
                    </tr>
                    <% }) %>
                  <% } else { %>
                    <tr><td colspan="5" class="text-center text-muted">No recent orders found</td></tr>
                  <% } %>
                </tbody>
                </tbody>
              </table>
            </div>
            <div class="card-footer small text-muted">Updated just now</div>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="card h-100">
            <div class="card-header fw-semibold">Quick actions</div>
            <div class="card-body">
              <div class="row g-3">
                <div class="col-sm-6">
                  <a class="btn btn-dark w-100" href="/products#add"><i class="fa-solid fa-plus me-1"></i> New
                    product</a>
                </div>
                <div class="col-sm-6">
                  <a class="btn btn-outline-dark w-100" href="/orders"><i class="fa-solid fa-receipt me-1"></i> Review
                    orders</a>
                </div>
                <div class="col-sm-6">
                  <a class="btn btn-outline-dark w-100" href="/coupons#new"><i class="fa-solid fa-ticket me-1"></i>
                    Create coupon</a>
                </div>
                <div class="col-sm-6">
                  <a class="btn btn-outline-dark w-100" href="/banners"><i class="fa-solid fa-image me-1"></i>
                    Manage banners</a>
                </div>
              </div>
              <hr>
              <div class="d-flex align-items-center gap-3">
                <div class="flex-fill">
                  <div class="small text-muted">Low stock alerts</div>
                  <div class="fw-semibold">7 products below threshold</div>
                </div>
                <a class="btn btn-sm btn-outline-secondary" href="/products#inventory">Review</a>
              </div>
              <div class="d-flex align-items-center gap-3 mt-3">
                <div class="flex-fill">
                  <div class="small text-muted">Customer tickets</div>
                  <div class="fw-semibold">3 open tickets</div>
                </div>
                <a class="btn btn-sm btn-outline-secondary" href="/customers#tickets">Open</a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- New Analytics Row -->
      <div class="row g-3 mt-1">
        <div class="col-lg-8">
          <div class="card h-100">
            <div class="card-header fw-semibold">Top Products</div>
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Product</th>
                    <th>Units Sold</th>
                    <th>Revenue</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(topProducts && topProducts.length > 0) { %>
                    <% topProducts.forEach(product => { %>
                    <tr>
                      <td><%= product.name %></td>
                      <td><%= product.totalSold %></td>
                      <td>₹<%= product.totalRevenue.toLocaleString() %></td>
                    </tr>
                    <% }) %>
                  <% } else { %>
                    <tr><td colspan="3" class="text-center text-muted">No product sales in this period</td></tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            <div class="card-footer small text-muted">Based on <%= selectedRange.toLowerCase() %></div>
          </div>
        </div>

        <div class="col-lg-4">
          <div class="card h-100">
            <div class="card-header fw-semibold">Payment Methods</div>
            <div class="card-body">
              <canvas id="chartPayments" height="200"></canvas>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  <script>
    const ctx = document.getElementById('chartSales');
    if (ctx) {
      // Dynamic Data injected from Backend
      const labels = <%- chart.labels %>;
      const revenueData = <%- chart.revenue %>;
      const ordersData = <%- chart.orders %>;

      new Chart(ctx, {
        type: 'line',
        data: {
          labels: labels,
          datasets: [
            { 
                label: 'Revenue (INR)', 
                data: revenueData, 
                borderColor: '#212529', 
                backgroundColor: 'rgba(33,37,41,.08)', 
                fill: true, 
                tension: .35,
                yAxisID: 'y' // Bind to left axis
            },
            { 
                label: 'Orders', 
                data: ordersData, 
                borderColor: '#adb5bd', 
                borderDash: [4, 4], 
                tension: .35,
                yAxisID: 'y1' // Bind to right axis
            }
          ]
        },
        options: {
          responsive: true,
          interaction: { mode: 'index', intersect: false },
          plugins: { legend: { display: true } },
          scales: { 
            y: { 
                type: 'linear',
                display: true,
                position: 'left',
                beginAtZero: true, 
                grid: { color: 'rgba(0,0,0,.05)' },
                title: { display: true, text: 'Revenue (₹)' }
            }, 
            y1: {
                type: 'linear',
                display: true,
                position: 'right',
                beginAtZero: true,
                grid: { drawOnChartArea: false }, // only want the grid lines for one axis to show up
                title: { display: true, text: 'Order Count' }
            },
            x: { grid: { display: false } } 
          }
        }
      });
    }

    // Payment Methods Doughnut Chart
    const ctxPayments = document.getElementById('chartPayments');
    if (ctxPayments) {
      const methods = <%- paymentStats.methods %>;
      const counts = <%- paymentStats.counts %>;

      new Chart(ctxPayments, {
        type: 'doughnut',
        data: {
          labels: methods.map(m => m === 'cod' ? 'Cash on Delivery' : m === 'card' ? 'Card Payment' : m),
          datasets: [{
            data: counts,
            backgroundColor: ['#212529', '#6c757d', '#198754', '#0d6efd']
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'bottom'
            }
          }
        }
      });
    }
  </script>
</body>

</html>