<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Admin • Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    :root {
      --side: 260px;
      --dark: #212529;
      --muted: #6c757d;
    }

    body {
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      background: #f8f9fa;
    }

    .sidebar {
      position: fixed;
      inset: 0 auto 0 0;
      width: var(--side);
      background: #d8d8d8da;
      border-right: 1px solid #e9ecef;
      padding: 20px;
      overflow-y: auto;
    }

    .brand {
      font-weight: 700;
      letter-spacing: .5px;
      color: var(--dark);
      text-decoration: none;
    }

    .nav-aside .nav-link {
      color: #212529;
      padding: 10px 12px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .nav-aside .nav-link.active,
    .nav-aside .nav-link:hover {
      background: #000000da;
      color: #f8f9fa;
      font-weight: 500;
    }

    .content {
      margin-left: var(--side);
      min-height: 100vh;
    }

    .topbar {
      position: sticky;
      top: 0;
      z-index: 10;
      background: #d8d8d8;
      border-bottom: 1px solid #e9ecef;
      text-align: center;
      padding: 10px 0;
      font-size: 1.50rem;
    }

    .kpi-card .title {
      color: var(--muted);
      font-size: .9rem;
    }

    .kpi-card .value {
      font-weight: 700;
      font-size: 1.6rem;
    }

    .table thead th {
      font-weight: 900;
    }

    .status-badge {
      font-size: .75rem;
    }

    @media (max-width: 992px) {
      .sidebar {
        position: fixed;
        transform: translateX(-100%);
        transition: transform .3s ease;
        z-index: 1000;
      }

      .sidebar.show {
        transform: translateX(0);
      }

      .content {
        margin-left: 0;
      }
    }
  </style>
</head>

<body>
  <%- include('partials/sidebar', { page: 'dashboard' }) %>

  <main class="content">
    <header class="topbar">
      <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between py-2">
          <div class="d-flex align-items-center gap-2">
            <button class="btn btn-outline-secondary d-lg-none"
              onclick="document.getElementById('sidebar').classList.toggle('show')">
              <i class="fa-solid fa-bars"></i>
            </button>
            <span class="fw-bold">Dashboard</span>
          </div>
          <div class="d-flex align-items-center gap-2">
            <div class="dropdown">
              <button class="btn btn-light dropdown-toggle btn-sm" data-bs-toggle="dropdown"><i
                  class="fa-regular fa-bell"></i> Alerts</button>
              <div class="dropdown-menu dropdown-menu-end">
                <span class="dropdown-item-text text-muted small">No new notifications</span>
              </div>
            </div>
            <div class="dropdown">
              <button class="btn btn-dark btn-sm dropdown-toggle" data-bs-toggle="dropdown"><i
                  class="fa-regular fa-user"></i> Admin</button>
              <div class="dropdown-menu dropdown-menu-end">
                <a class="dropdown-item" href="settings#team">Team</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/logout">Logout</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <section class="container-fluid py-4">
      <div class="row g-3">
        <div class="col-6 col-lg-3">
          <div class="card kpi-card h-100">
            <div class="card-body">
              <div class="title">Revenue (<%= selectedRange %>)</div>
              <div class="value">₹<%= kpi.revenue %></div>
              <div class="text-success small"><i class="fa-solid fa-arrow-up-right-from-square"></i> Live</div>
            </div>
          </div>
        </div>
        <div class="col-6 col-lg-3">
          <div class="card kpi-card h-100">
            <div class="card-body">
              <div class="title">Orders</div>
              <div class="value"><%= kpi.orders %></div>
              <div class="text-success small">Avg Order Value: ₹<%= kpi.orders > 0 ? (parseInt(kpi.revenue.replace(/,/g, '')) / parseInt(kpi.orders.replace(/,/g, ''))).toFixed(0) : 0 %></div>
            </div>
          </div>
        </div>
        <div class="col-6 col-lg-3">
          <div class="card kpi-card h-100">
            <div class="card-body">
              <div class="title">Customers</div>
              <div class="value"><%= kpi.customers %></div>
              <div class="text-primary small">+<%= kpi.newCustomers %> new in range</div>
            </div>
          </div>
        </div>
        <div class="col-6 col-lg-3">
          <div class="card kpi-card h-100">
            <div class="card-body">
              <div class="title">Refund Rate</div>
              <div class="value"><%= kpi.refundRate %>%</div>
              <div class="text-danger small">All time</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Row 2: Revenue Graph (Full Width) -->
      <div class="row g-3 mt-1">
        <div class="col-12">
          <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
              <span class="fw-semibold">Revenue Analytics</span>
              <div>
                <select class="form-select form-select-sm" onchange="window.location.href='/dashboard?range='+this.value">
                  <option <%= selectedRange === 'Last 30 days' ? 'selected' : '' %>>Last 30 days</option>
                  <option <%= selectedRange === 'Last 90 days' ? 'selected' : '' %>>Last 90 days</option>
                  <option <%= selectedRange === 'This year' ? 'selected' : '' %>>This year</option>
                </select>
              </div>
            </div>
            <div class="card-body">
              <canvas id="chartSales" height="130"></canvas>
            </div>
          </div>
        </div>
      </div>

      <!-- Row 3: Category Sales Bar Graph -->
      <div class="row g-3 mt-1">
        <div class="col-12">
            <div class="card h-100">
                <div class="card-header fw-semibold">Category Sales Performance</div>
                <div class="card-body">
                    <canvas id="chartCategories" height="100"></canvas>
                </div>
            </div>
        </div>
      </div>

      <!-- Row 4: Recent Orders & Top Products -->
      <div class="row g-3 mt-1">
        <!-- Recent Orders -->
        <div class="col-lg-6">
          <div class="card h-100">
            <div class="card-header fw-semibold d-flex justify-content-between align-items-center">
              Recent orders
              <a href="/orders" class="btn btn-sm btn-outline-secondary">View all</a>
            </div>
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Order</th>
                    <th>Date</th>
                    <th>Customer</th>
                    <th>Total</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(recentOrders && recentOrders.length > 0) { %>
                    <% recentOrders.forEach(order => { %>
                    <tr>
                        <td>#<%= order._id.toString().slice(-6).toUpperCase() %></td>
                        <td><%= new Date(order.createdAt).toLocaleDateString('en-US', {month:'short', day:'numeric'}) %></td>
                        <td><%= order.userId ? order.userId.name : 'Unknown' %></td>
                        <td>₹<%= order.totalAmount %></td>
                        <td>
                            <% let badgeClass = 'text-bg-secondary';
                               if(order.orderStatus === 'paid') badgeClass = 'text-bg-success';
                               if(order.orderStatus === 'pending') badgeClass = 'text-bg-warning';
                               if(order.orderStatus === 'shipped') badgeClass = 'text-bg-info';
                               if(order.orderStatus === 'delivered') badgeClass = 'text-bg-success';
                               if(order.orderStatus === 'cancelled') badgeClass = 'text-bg-danger';
                            %>
                            <span class="badge <%= badgeClass %> status-badge"><%= order.orderStatus %></span>
                        </td>
                    </tr>
                    <% }) %>
                  <% } else { %>
                    <tr><td colspan="5" class="text-center text-muted">No recent orders found</td></tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Top Products -->
        <div class="col-lg-6">
          <div class="card h-100">
            <div class="card-header fw-semibold">Top Products</div>
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Product</th>
                    <th>Units Sold</th>
                    <th>Revenue</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(topProducts && topProducts.length > 0) { %>
                    <% topProducts.forEach(product => { %>
                    <tr>
                      <td><%= product.name %></td>
                      <td><%= product.totalSold %></td>
                      <td>₹<%= product.totalRevenue.toLocaleString() %></td>
                    </tr>
                    <% }) %>
                  <% } else { %>
                    <tr><td colspan="3" class="text-center text-muted">No product sales in this period</td></tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

       <!-- Row 5: Payment Methods -->
       <div class="row g-3 mt-1">
        <div class="col-lg-6">
            <div class="card h-100">
              <div class="card-header fw-semibold">Payment Methods</div>
              <div class="card-body">
                <canvas id="chartPayments" height="200"></canvas>
              </div>
            </div>
          </div>
       </div>
    </section>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  <script>
    // Revenue Line Chart
    const ctx = document.getElementById('chartSales');
    if (ctx) {
      // Dynamic Data injected from Backend
      const labels = <%- chart.labels %>;
      const revenueData = <%- chart.revenue %>;

      new Chart(ctx, {
        type: 'line',
        data: {
          labels: labels,
          datasets: [
            { 
                label: 'Revenue (INR)', 
                data: revenueData, 
                borderColor: '#212529', 
                backgroundColor: 'rgba(33,37,41,.08)', 
                fill: true, 
                tension: .35
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          interaction: { mode: 'index', intersect: false },
          plugins: { legend: { display: true } },
          scales: { 
            y: { 
                type: 'linear',
                display: true,
                position: 'left',
                beginAtZero: true, 
                grid: { color: 'rgba(0,0,0,.05)' },
                title: { display: true, text: 'Revenue (₹)' }
            }, 
            x: { grid: { display: false } } 
          }
        }
      });
    }

    // Category Sales Bar Chart
    const ctxCats = document.getElementById('chartCategories');
    if (ctxCats) {
      const catLabels = <%- categorySales.labels %>;
      const catData = <%- categorySales.data %>;

      new Chart(ctxCats, {
        type: 'bar',
        data: {
          labels: catLabels,
          datasets: [{
            label: 'Units Sold',
            data: catData,
            backgroundColor: '#0d6efd',
            borderRadius: 4
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: false },
            tooltip: {
                callbacks: {
                    title: function(tooltipItems) {
                        return tooltipItems[0].label; // Show full category name
                    }
                }
            }
          },
          scales: {
             y: { beginAtZero: true, title: {display: true, text: 'Quantity Sold'} },
             x: { 
                ticks: { autoSkip: false, maxRotation: 45, minRotation: 0 } // Improve label readability
             }
          }
        }
      });
    }

    // Payment Methods Doughnut Chart
    const ctxPayments = document.getElementById('chartPayments');
    if (ctxPayments) {
      const methods = <%- paymentStats.methods %>;
      const counts = <%- paymentStats.counts %>;

      new Chart(ctxPayments, {
        type: 'doughnut',
        data: {
          labels: methods.map(m => m === 'cod' ? 'Cash on Delivery' : m === 'card' ? 'Card Payment' : m),
          datasets: [{
            data: counts,
            backgroundColor: ['#212529', '#6c757d', '#198754', '#0d6efd']
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'bottom'
            }
          }
        }
      });
    }
  </script>
</body>

</html>