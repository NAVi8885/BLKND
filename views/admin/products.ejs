        productForm.reset();

        if (productIdInput) productIdInput.value = '';

        // Reset sizes
        sizeCheckboxes.forEach(cb => {
          cb.checked = false;
        });

        // Reset colors
        colors = [];
        if (colorNameInput) colorNameInput.value = '';
        if (colorCodeInput) colorCodeInput.value = '#000000';
        renderColors();

        // Reset existing images
        existingImages = [];
        renderExistingImages();
      }

      function fillFormFromProduct(product) {
        if (!product) return;

        if (productIdInput) productIdInput.value = product._id || '';

        if (nameInput) nameInput.value = product.name || '';
        if (statusSelect) statusSelect.value = product.status || 'Draft';
        if (descriptionInput) descriptionInput.value = product.description || '';

        if (tagsInput) {
          if (Array.isArray(product.tags)) {
            tagsInput.value = product.tags.join(', ');
          } else {
            tagsInput.value = product.tags || '';
          }
        }

        if (categorySelect) categorySelect.value = product.category || 'unisex';
        if (priceInput != null) priceInput.value = product.price ?? '';
        if (stockInput != null) stockInput.value = product.stock ?? '';

        // sizes (product.size is an array in your schema)
        const sizes = Array.isArray(product.size) ? product.size : [];
        sizeCheckboxes.forEach(cb => {
          cb.checked = sizes.includes(cb.value);
        });

        // colors (array of { name, code })
        if (Array.isArray(product.colors)) {
          colors = product.colors.map(c => ({ name: c.name, code: c.code }));
        } else {
          colors = [];
        }
        renderColors();

        // existing images (array of URLs)
        if (Array.isArray(product.image)) {
          existingImages = product.image.map((url, idx) => ({
            url,
            primary: idx === 0   // default: first image is primary if your schema doesn't track it
          }));
        } else {
          existingImages = [];
        }
        renderExistingImages();
      }

      /* ------------ COLOR EVENTS ------------ */

      if (addColorBtn) {
        addColorBtn.addEventListener('click', function () {
          const name = (colorNameInput.value || '').trim();
          const code = (colorCodeInput.value || '').trim();

          if (!name || !code) {
            return;
          }

          const lower = name.toLowerCase();
          const exists = colors.some(c => c.name.toLowerCase() === lower);

          if (exists) {
            alert(`color "${name}" already exists`);
            return;
          }

          colors.push({ name, code });

          colorNameInput.value = '';
          renderColors();
        });
      }

      colorListEl.addEventListener('click', function (e) {
        const btn = e.target.closest('.btn-close');
        if (!btn) return;

        const index = parseInt(btn.getAttribute('data-index'), 10);
        if (!Number.isNaN(index)) {
          colors.splice(index, 1);
          renderColors();
        }
      });

      /* ------------ EXISTING IMAGES EVENTS ------------ */

      if (existingImagesContainer) {
        existingImagesContainer.addEventListener('click', function (e) {
          const btn = e.target.closest('button[data-action]');
          if (!btn) return;

          const action = btn.getAttribute('data-action');
          const index = parseInt(btn.getAttribute('data-index'), 10);
          if (Number.isNaN(index)) return;

          if (action === 'primary') {
            // set only this image as primary
            existingImages = existingImages.map((img, i) => ({
              ...img,
              primary: i === index
            }));
          } else if (action === 'remove') {
            // remove this image
            existingImages.splice(index, 1);

            // ensure at least one primary remains if any images left
            if (existingImages.length) {
              const alreadyPrimary = existingImages.some(img => img.primary);
              if (!alreadyPrimary) {
                existingImages[0].primary = true;
              }
            }
          }

          renderExistingImages();
        });
      }

      /* ------------ NEW vs EDIT MODAL BEHAVIOUR ------------ */

      if (productModal) {
        productModal.addEventListener('show.bs.modal', function (event) {
          const triggerButton = event.relatedTarget;
          const modalTitle = this.querySelector('.modal-title');

          // If there is NO button or NO data-product-id -> create mode
          const isNew = !triggerButton || !triggerButton.getAttribute('data-product-id');

          if (isNew) {
            // CREATE MODE
            resetForm(); // clear fields, colors, images, etc.
            if (modalTitle) modalTitle.textContent = 'New product';

            // no id, so backend treats as create
            productIdInput.value = '';

            // base create URL, but you *could* keep it always /admin/products
            productForm.action = '/admin/products';
            productForm.method = 'POST';
          } else {
            // EDIT MODE
            const raw = triggerButton.getAttribute('data-product');
            let product = null;

            try {
              product = raw ? JSON.parse(raw) : null;
            } catch (err) {
              console.error('Failed to parse product data:', err);
            }

            resetForm();

            if (product) {
              fillFormFromProduct(product); // set all field values
              if (modalTitle) modalTitle.textContent = 'Edit product';

              // set the hidden id so backend knows it's an edit
              productIdInput.value = product._id;

              // either:
              // OPTION A – same URL for create+edit:
              productForm.action = '/admin/products';
              productForm.method = 'POST';

              // OR OPTION B – different URL per product:
              // productForm.action = `/admin/products/${product._id}`;
              // productForm.method = 'POST';
            } else {
              // fallback: treat unknown as new
              productIdInput.value = '';
              productForm.action = '/admin/products';
              productForm.metho`d = 'POST'`;
            }
          }
        });
      }

    })();
