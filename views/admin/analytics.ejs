<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Admin • Analytics</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    :root {
      --side: 260px
    }

    body {
      background: #f8f9fa
    }

    .sidebar {
      position: fixed;
      inset: 0 auto 0 0;
      width: var(--side);
      background: #d8d8d8da;
      border-right: 1px solid #e9ecef;
      padding: 20px;
      overflow-y: auto;
    }
    
    .brand {
      font-weight: 700;
      letter-spacing: .5px;
      color: var(--dark);
      text-decoration: none;
    }

    .nav-aside .nav-link {
      color: #212529;
      padding: 10px 12px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      gap: 10px
    }

    .nav-aside .nav-link.active,
    .nav-aside .nav-link:hover {
      background: #000000da;
      color: #f8f9fa;
      font-weight: 500;
    }

    .content {
      margin-left: var(--side)
    }

    .topbar {
      position: sticky;
      top: 0;
      z-index: 10;
      background: #d8d8d8;
      border-bottom: 1px solid #e9ecef;
      text-align: center;
      padding: 10px 0;
      font-size: 1.50rem;
    }

    .kpi .title {
      color: #6c757d;
      font-size: .9rem
    }

    .kpi .value {
      font-weight: 700;
      font-size: 1.4rem
    }

    @media(max-width:992px) {
      .sidebar {
        transform: translateX(-100%);
        transition: transform .3sl;
        z-index: 1000;
      }

      .sidebar.show {
        transform: translateX(0)
      }

      .content {
        margin-left: 0
      }
    }
  </style>
</head>

<body>
  <aside id="sidebar" class="sidebar">
    <a href="/dashboard" class="brand h4 d-block mb-3">BLKND Admin</a>
    <nav class="nav nav-pills flex-column nav-aside">
      <a class="nav-link" href="/dashboard"><i class="fa-solid fa-gauge-high"></i> Dashboard</a>
      <a class="nav-link" href="/orders"><i class="fa-solid fa-receipt"></i> Orders</a>
      <a class="nav-link" href="/products"><i class="fa-solid fa-shirt"></i> Products</a>
      <a class="nav-link" href="/categories"><i class="fa-solid fa-layer-group"></i> Categories</a>
      <a class="nav-link" href="/customers"><i class="fa-solid fa-user-group"></i> Customers</a>
      <a class="nav-link" href="/coupons"><i class="fa-solid fa-ticket"></i> Coupons</a>
      <a class="nav-link active" href="/analytics"><i class="fa-solid fa-chart-line"></i> Analytics</a>
      <a class="nav-link" href="/banners"><i class="fa-solid fa-image"></i> Banners</a>
      <a class="nav-link" href="/settings"><i class="fa-solid fa-gear"></i> Settings</a>
    </nav>
  </aside>

  <main class="content">
    <header class="topbar">
      <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between py-2">
          <div class="d-flex align-items-center gap-2">
            <button class="btn btn-outline-secondary d-lg-none"
              onclick="document.getElementById('sidebar').classList.toggle('show')"><i
                class="fa-solid fa-bars"></i></button>
            <span class="fw-bold">Analytics</span>
          </div>
          <div class="d-flex align-items-center gap-2">
            <select class="form-select form-select-sm w-auto">
              <option>Last 30 days</option>
              <option>Last 90 days</option>
              <option>This year</option>
              <option>Custom…</option>
            </select>
            <button class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-share-nodes me-1"></i> Share</button>
            <button class="btn btn-sm btn-dark"><i class="fa-solid fa-download me-1"></i> Export PDF</button>
          </div>
        </div>
      </div>
    </header>

    <section class="container-fluid py-3">
      <div class="row g-3">
        <div class="col-6 col-lg-3">
          <div class="card kpi h-100">
            <div class="card-body">
              <div class="title">Revenue</div>
              <div class="value"><%= kpis.totalRevenue.toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) %></div>
            </div>
          </div>
        </div>
        <div class="col-6 col-lg-3">
          <div class="card kpi h-100">
            <div class="card-body">
              <div class="title">Orders</div>
              <div class="value"><%= kpis.totalOrders %></div>
            </div>
          </div>
        </div>
        <div class="col-6 col-lg-3">
          <div class="card kpi h-100">
            <div class="card-body">
              <div class="title">AOV</div>
              <div class="value"><%= kpis.avgOrderValue.toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) %></div>
            </div>
          </div>
        </div>
      </div>

      <div class="row g-3 mt-1">
        <div class="col-lg-8">
          <div class="card h-100">
            <div class="card-header fw-semibold">Revenue & Orders</div>
            <div class="card-body"><canvas id="revOrders" height="110"></canvas></div>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="card h-100">
            <div class="card-header fw-semibold">Channels</div>
            <div class="card-body"><canvas id="channels" height="110"></canvas></div>
          </div>
        </div>
      </div>

      <div class="row g-3 mt-1">
        <div class="col-lg-6">
          <div class="card h-100">
            <div class="card-header fw-semibold">Conversion funnel</div>
            <div class="card-body"><canvas id="funnel" height="110"></canvas></div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="card h-100">
            <div class="card-header fw-semibold">Top products</div>
            <div class="table-responsive">
              <tbody>
  <% topProducts.forEach(product => { %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.totalSold %></td>
    <td><%= product.totalRevenue.toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) %></td>
    <td>--</td> </tr>
  <% }) %>
</tbody>
            </div>
            <div class="card-footer small text-muted">Refunds shown as share of units</div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  <script>
    // Revenue & Orders Chart
    const dates = <%- chartData.dates %>;     // E.g. ['2026-01-01', '2026-01-02']
    const revenues = <%- chartData.revenues %>;
    const orders = <%- chartData.orderCounts %>;

    new Chart(document.getElementById('revOrders'), {
      type: 'line',
      data: {
        labels: dates, // Dynamic Labels
        datasets: [
          { 
            label: 'Revenue', 
            data: revenues, // Dynamic Revenue Data
            borderColor: '#212529', 
            backgroundColor: 'rgba(33,37,41,.08)', 
            fill: true, 
            tension: .35 
          },
          { 
            label: 'Orders', 
            data: orders, // Dynamic Order Data
            borderColor: '#adb5bd', 
            borderDash: [4, 4], 
            tension: .35, 
            yAxisID: 'y1' 
          }
        ]
      },
      options: {
        scales: {
          y: { beginAtZero: true, position: 'left' },
          y1: { beginAtZero: true, position: 'right', grid: { display: false } }
        }
      }
    });

    // Payment Methods (Replacing Channels)
    const methods = <%- chartData.paymentMethods %>;
    const methodCounts = <%- chartData.paymentCounts %>;

    new Chart(document.getElementById('channels'), {
      type: 'doughnut',
      data: {
        labels: methods, 
        datasets: [{ 
            data: methodCounts, 
            backgroundColor: ['#212529', '#6c757d', '#198754', '#0d6efd'] 
        }]
      },
      options: { plugins: { legend: { position: 'bottom' } } }
    });
</script>
</body>

</html>