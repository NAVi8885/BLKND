<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Admin • Coupons</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    :root {
      --side: 260px
    }

    body {
      background: #f8f9fa
    }

    .sidebar {
      position: fixed;
      inset: 0 auto 0 0;
      width: var(--side);
      background: #d8d8d8da;
      border-right: 1px solid #e9ecef;
      padding: 20px;
      overflow-y: auto;
    }
    
    .brand {
      font-weight: 700;
      letter-spacing: .5px;
      color: var(--dark);
      text-decoration: none;
    }

    .nav-aside .nav-link {
      color: #212529;
      padding: 10px 12px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      gap: 10px
    }

    .nav-aside .nav-link.active,
    .nav-aside .nav-link:hover {
      background: #000000da;
      color: #f8f9fa;
      font-weight: 500;
    }

    .content {
      margin-left: var(--side)
    }

    .topbar {
      position: sticky;
      top: 0;
      z-index: 10;
      background: #d8d8d8;
      border-bottom: 1px solid #e9ecef;
      text-align: center;
      padding: 10px 0;
      font-size: 1.50rem;
    }

    .code {
      font-family: ui-monospace, SFMono-Regular, Menlo, Consolas, monospace
    }

    @media(max-width:992px) {
      .sidebar {
        transform: translateX(-100%);
        transition: transform .3s;
        z-index: 1000;
      }

      .sidebar.show {
        transform: translateX(0)
      }

      .content {
        margin-left: 0
      }
    }
  </style>
</head>

<body>
  <aside id="sidebar" class="sidebar">
    <a href="/dashboard" class="brand h4 d-block mb-3">BLKND Admin</a>
    <nav class="nav nav-pills flex-column nav-aside">
      <a class="nav-link" href="/dashboard"><i class="fa-solid fa-gauge-high"></i> Dashboard</a>
      <a class="nav-link" href="/orders"><i class="fa-solid fa-receipt"></i> Orders</a>
      <a class="nav-link" href="/products"><i class="fa-solid fa-shirt"></i> Products</a>
      <a class="nav-link" href="/categories"><i class="fa-solid fa-layer-group"></i> Categories</a>
      <a class="nav-link" href="/customers"><i class="fa-solid fa-user-group"></i> Customers</a>
      <a class="nav-link active" href="/coupons"><i class="fa-solid fa-ticket"></i> Coupons</a>
      <a class="nav-link" href="/analytics"><i class="fa-solid fa-chart-line"></i> Analytics</a>
      <a class="nav-link" href="/settings"><i class="fa-solid fa-gear"></i> Settings</a>
    </nav>
  </aside>

  <main class="content">
    <header class="topbar">
      <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between py-2">
          <div class="d-flex align-items-center gap-2">
            <button class="btn btn-outline-secondary d-lg-none"
              onclick="document.getElementById('sidebar').classList.toggle('show')"><i
                class="fa-solid fa-bars"></i></button>
            <span class="fw-bold">Coupons</span>
          </div>
          <div class="d-flex align-items-center gap-2">
            <a id="new" class="btn btn-dark btn-sm" data-bs-toggle="modal" data-bs-target="#couponModal"><i
                class="fa-solid fa-plus me-1"></i> New coupon</a>
            <button class="btn btn-outline-secondary btn-sm"><i class="fa-solid fa-file-import me-1"></i>
              Import</button>
            <button class="btn btn-outline-secondary btn-sm"><i class="fa-solid fa-file-export me-1"></i>
              Export</button>
          </div>
        </div>
      </div>
    </header>

    <section class="container-fluid py-3">
      <div class="card mb-3">
        <div class="card-body">
          <form class="row g-2 align-items-end">
            <div class="col-md-3"><label class="form-label">Search</label><input type="search" class="form-control"
                placeholder="Code, name"></div>
            <div class="col-md-2"><label class="form-label">Type</label><select class="form-select">
                <option>Any</option>
                <option>Percentage</option>
                <option>Fixed amount</option>
                <option>Free shipping</option>
              </select></div>
            <div class="col-md-2"><label class="form-label">Status</label><select class="form-select">
                <option>Any</option>
                <option>Active</option>
                <option>Scheduled</option>
                <option>Expired</option>
                <option>Disabled</option>
              </select></div>
            <div class="col-md-3">
              <label class="form-label">Active between</label>
              <div class="input-group"><input type="date" class="form-control"><span
                  class="input-group-text">to</span><input type="date" class="form-control"></div>
            </div>
            <div class="col-md-2"><button class="btn btn-dark w-100" type="button"><i
                  class="fa-solid fa-filter me-1"></i> Apply</button></div>
          </form>
        </div>
      </div>

      <div class="card">
        <div class="table-responsive">
          <table class="table align-middle table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th style="width:36px"><input type="checkbox"
                    onclick="document.querySelectorAll('.row-check').forEach(c=>c.checked=this.checked)"></th>
                <th>Code</th>
                <th>Name</th>
                <th>Type</th>
                <th>Discount</th>
                <th>Usage</th>
                <th>Active</th>
                <th>Status</th>
                <th style="width:140px">Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><input type="checkbox" class="row-check"></td>
                <td class="code">WELCOME20</td>
                <td>Welcome Offer</td>
                <td>Percentage</td>
                <td>20%</td>
                <td>134 / 500</td>
                <td>Sep 1, 2025 – Dec 31, 2025</td>
                <td><span class="badge text-bg-success">Active</span></td>
                <td class="text-nowrap">
                  <div class="btn-group btn-group-sm">
                    <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#couponModal"><i
                        class="fa-regular fa-pen-to-square"></i></button>
                    <button class="btn btn-outline-secondary"><i class="fa-solid fa-power-off"></i></button>
                    <button class="btn btn-outline-danger"><i class="fa-regular fa-trash-can"></i></button>
                  </div>
                </td>
              </tr>
              <tr>
                <td><input type="checkbox" class="row-check"></td>
                <td class="code">FREESHIP</td>
                <td>Free Shipping</td>
                <td>Free shipping</td>
                <td>—</td>
                <td>58 / ∞</td>
                <td>Always on</td>
                <td><span class="badge text-bg-secondary">Disabled</span></td>
                <td class="text-nowrap">
                  <div class="btn-group btn-group-sm">
                    <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#couponModal"><i
                        class="fa-regular fa-pen-to-square"></i></button>
                    <button class="btn btn-outline-secondary"><i class="fa-solid fa-power-off"></i></button>
                    <button class="btn btn-outline-danger"><i class="fa-regular fa-trash-can"></i></button>
                  </div>
                </td>
              </tr>
              <tr>
                <td><input type="checkbox" class="row-check"></td>
                <td class="code">FESTIVE500</td>
                <td>Festive Flat Off</td>
                <td>Fixed amount</td>
                <td>$5.00</td>
                <td>420 / 1000</td>
                <td>Oct 1, 2025 – Nov 15, 2025</td>
                <td><span class="badge text-bg-warning">Scheduled</span></td>
                <td class="text-nowrap">
                  <div class="btn-group btn-group-sm">
                    <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#couponModal"><i
                        class="fa-regular fa-pen-to-square"></i></button>
                    <button class="btn btn-outline-secondary"><i class="fa-solid fa-power-off"></i></button>
                    <button class="btn btn-outline-danger"><i class="fa-regular fa-trash-can"></i></button>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
          <div class="d-flex gap-2">
            <select class="form-select form-select-sm" style="width:180px">
              <option>Bulk actions</option>
              <option>Activate</option>
              <option>Disable</option>
              <option>Delete</option>
              <option>Export</option>
            </select>
            <button class="btn btn-sm btn-outline-secondary">Apply</button>
          </div>
          <ul class="pagination pagination-sm mb-0">
            <li class="page-item disabled"><a class="page-link">Prev</a></li>
            <li class="page-item active"><a class="page-link">1</a></li>
            <li class="page-item"><a class="page-link">2</a></li>
            <li class="page-item"><a class="page-link">3</a></li>
            <li class="page-item"><a class="page-link">Next</a></li>
          </ul>
        </div>
      </div>
    </section>
  </main>

  <!-- Create/Edit Coupon Modal -->
  <div class="modal fade" id="couponModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Coupon</h5><button class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="row g-3">
            <div class="col-md-4">
              <label class="form-label">Code</label>
              <input class="form-control code" placeholder="e.g., WELCOME20" maxlength="24">
              <div class="form-text">Use uppercase letters and numbers only</div>
            </div>
            <div class="col-md-4">
              <label class="form-label">Name (internal)</label>
              <input class="form-control" placeholder="Coupon name">
            </div>
            <div class="col-md-4">
              <label class="form-label">Type</label>
              <select class="form-select" id="couponType">
                <option>Percentage</option>
                <option>Fixed amount</option>
                <option>Free shipping</option>
              </select>
            </div>
            <div class="col-md-4">
              <label class="form-label">Discount value</label>
              <div class="input-group">
                <span class="input-group-text" id="valPrefix">%</span>
                <input type="number" step="0.01" class="form-control" placeholder="0">
              </div>
            </div>
            <div class="col-md-4">
              <label class="form-label">Min order value</label>
              <div class="input-group"><span class="input-group-text">$</span><input type="number" step="0.01"
                  class="form-control" placeholder="0.00"></div>
            </div>
            <div class="col-md-4">
              <label class="form-label">Max discount</label>
              <div class="input-group"><span class="input-group-text">$</span><input type="number" step="0.01"
                  class="form-control" placeholder="Optional"></div>
            </div>
            <div class="col-md-6">
              <label class="form-label">Start / End</label>
              <div class="input-group">
                <input type="datetime-local" class="form-control"><span class="input-group-text">to</span><input
                  type="datetime-local" class="form-control">
              </div>
            </div>
            <div class="col-md-3">
              <label class="form-label">Usage limit (total)</label>
              <input type="number" class="form-control" placeholder="∞">
            </div>
            <div class="col-md-3">
              <label class="form-label">Per customer</label>
              <input type="number" class="form-control" placeholder="1">
            </div>
          </div>

          <hr>
          <h6>Eligibility</h6>
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Applies to</label>
              <select class="form-select">
                <option>Entire order</option>
                <option>Specific products</option>
                <option>Specific categories</option>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label">Customer segment</label>
              <select class="form-select">
                <option>All customers</option>
                <option>Newsletter subscribers</option>
                <option>First‑time buyers</option>
                <option>High LTV</option>
              </select>
            </div>
            <div class="col-12">
              <label class="form-label">Include / Exclude items (comma separated)</label>
              <input class="form-control" placeholder="SKU or category handles to include/exclude">
              <div class="form-text">Prefix with - to exclude (e.g., -SALE)</div>
            </div>
          </div>

          <hr>
          <h6>Rules</h6>
          <div class="row g-3">
            <div class="col-md-4">
              <div class="form-check"><input class="form-check-input" type="checkbox" id="stack"><label
                  class="form-check-label" for="stack">Allow stacking with other coupons</label></div>
            </div>
            <div class="col-md-4">
              <div class="form-check"><input class="form-check-input" type="checkbox" id="sale"><label
                  class="form-check-label" for="sale">Apply on sale items</label></div>
            </div>
            <div class="col-md-4">
              <div class="form-check"><input class="form-check-input" type="checkbox" id="auto"><label
                  class="form-check-label" for="auto">Auto‑apply if eligible</label></div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <div class="me-auto form-check">
            <input class="form-check-input" type="checkbox" id="maskCodes" checked>
            <label class="form-check-label" for="maskCodes">Mask code for non‑admin roles</label>
          </div>
          <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button class="btn btn-dark">Save coupon</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Simple prefix switch based on type
    document.addEventListener('change', e => {
      if (e.target.id === 'couponType') {
        document.getElementById('valPrefix').textContent = e.target.value === 'Percentage' ? '%' : '$';
      }
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>