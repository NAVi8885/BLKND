<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Admin • Coupons</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    :root {
      --side: 260px
    }

    body {
      background: #f8f9fa
    }

    .sidebar {
      position: fixed;
      inset: 0 auto 0 0;
      width: var(--side);
      background: #d8d8d8da;
      border-right: 1px solid #e9ecef;
      padding: 20px;
      overflow-y: auto;
    }
    
    .brand {
      font-weight: 700;
      letter-spacing: .5px;
      color: var(--dark);
      text-decoration: none;
    }

    .nav-aside .nav-link {
      color: #212529;
      padding: 10px 12px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      gap: 10px
    }

    .nav-aside .nav-link.active,
    .nav-aside .nav-link:hover {
      background: #000000da;
      color: #f8f9fa;
      font-weight: 500;
    }

    .content {
      margin-left: var(--side)
    }

    .topbar {
      position: sticky;
      top: 0;
      z-index: 10;
      background: #d8d8d8;
      border-bottom: 1px solid #e9ecef;
      text-align: center;
      padding: 10px 0;
      font-size: 1.50rem;
    }

    .code {
      font-family: ui-monospace, SFMono-Regular, Menlo, Consolas, monospace
    }

    @media(max-width:992px) {
      .sidebar {
        transform: translateX(-100%);
        transition: transform .3s;
        z-index: 1000;
      }

      .sidebar.show {
        transform: translateX(0)
      }

      .content {
        margin-left: 0
      }
    }
  </style>
</head>

<body>
  <%- include('partials/sidebar', { page: 'coupons' }) %>

  <main class="content">
    <header class="topbar">
      <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between py-2">
          <div class="d-flex align-items-center gap-2">
            <button class="btn btn-outline-secondary d-lg-none"
              onclick="document.getElementById('sidebar').classList.toggle('show')"><i
                class="fa-solid fa-bars"></i></button>
            <span class="fw-bold">Coupons</span>
          </div>
          <div class="d-flex align-items-center gap-2">
            <a id="new" class="btn btn-dark btn-sm" 
   data-bs-toggle="modal" 
   data-bs-target="#couponModal" 
   onclick="resetCouponForm()">
   <i class="fa-solid fa-plus me-1"></i> New coupon
</a>
            <button class="btn btn-outline-secondary btn-sm"><i class="fa-solid fa-file-import me-1"></i>
              Import</button>
            <button class="btn btn-outline-secondary btn-sm"><i class="fa-solid fa-file-export me-1"></i>
              Export</button>
          </div>
        </div>
      </div>
    </header>

    <section class="container-fluid py-3">
      <div class="card mb-3">
        <div class="card-body">
          <form class="row g-2 align-items-end">
            <div class="col-md-3"><label class="form-label">Search</label><input type="search" class="form-control"
                placeholder="Code, name"></div>
            <div class="col-md-2"><label class="form-label">Type</label><select class="form-select">
                <option>Any</option>
                <option>Percentage</option>
                <option>Fixed amount</option>
                <option>Free shipping</option>
              </select></div>
            <div class="col-md-2"><label class="form-label">Status</label><select class="form-select">
                <option>Any</option>
                <option>Active</option>
                <option>Scheduled</option>
                <option>Expired</option>
                <option>Disabled</option>
              </select></div>
            <div class="col-md-3">
              <label class="form-label">Active between</label>
              <div class="input-group"><input type="date" class="form-control"><span
                  class="input-group-text">to</span><input type="date" class="form-control"></div>
            </div>
            <div class="col-md-2"><button class="btn btn-dark w-100" type="button"><i
                  class="fa-solid fa-filter me-1"></i> Apply</button></div>
          </form>
        </div>
      </div>

      <div class="card">
        <div class="table-responsive">
          <table class="table align-middle table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th style="width:36px"><input type="checkbox"
                    onclick="document.querySelectorAll('.row-check').forEach(c=>c.checked=this.checked)"></th>
                <th>Code</th>
                <th>Type</th>
                <th>Discount</th>
                <th>Usage</th>
                <th>Active</th>
                <th>Status</th>
                <th style="width:140px">Actions</th>
              </tr>
            </thead>
            <tbody>
  <% if(typeof coupons !== 'undefined' && coupons.length > 0) { %>
    <% coupons.forEach(coupon => { %>
      <tr>
        <td><input type="checkbox" class="row-check"></td>
        <td class="code"><%= coupon.code %></td>
        <td><%= coupon.type %></td>
        <td><%= coupon.type === 'percentage' ? coupon.value + '%' : '₹' + coupon.value %></td>
        <td>Min: ₹<%= coupon.minOrderValue %></td>
        <td><%= new Date(coupon.expiryDate).toLocaleDateString() %></td>
        <td>
            <span class="badge text-bg-<%= coupon.isActive ? 'success' : 'secondary' %>">
                <%= coupon.isActive ? 'Active' : 'Inactive' %>
            </span>
        </td>
        <td>
          <div class="btn-group btn-group-sm">
            <button class="btn btn-outline-secondary" 
                onclick="editCoupon(this)"
                data-id="<%= coupon._id %>"
                data-code="<%= coupon.code %>"
                data-type="<%= coupon.type %>"
                data-value="<%= coupon.value %>"
                data-min="<%= coupon.minOrderValue %>"
                data-max="<%= coupon.maxDiscount %>"
                data-expiry="<%= new Date(coupon.expiryDate).toISOString().split('T')[0] %>"
                data-usage="<%= coupon.usageLimit %>"
                data-bs-toggle="modal" 
                data-bs-target="#couponModal">
                <i class="fa-regular fa-pen-to-square"></i>
            </button>
            
            <a href="/admin/coupons/delete/<%= coupon._id %>" 
               class="btn btn-outline-danger" 
               onclick="return confirm('Delete this coupon?')">
               <i class="fa-regular fa-trash-can"></i>
            </a>
          </div>
        </td>
      </tr>
    <% }) %>
  <% } else { %>
    <tr><td colspan="8" class="text-center">No coupons found</td></tr>
  <% } %>
</tbody>
          </table>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
          <div class="d-flex gap-2">
            <select class="form-select form-select-sm" style="width:180px">
              <option>Bulk actions</option>
              <option>Activate</option>
              <option>Disable</option>
              <option>Delete</option>
              <option>Export</option>
            </select>
            <button class="btn btn-sm btn-outline-secondary">Apply</button>
          </div>
          <ul class="pagination pagination-sm mb-0">
            <li class="page-item disabled"><a class="page-link">Prev</a></li>
            <li class="page-item active"><a class="page-link">1</a></li>
            <li class="page-item"><a class="page-link">2</a></li>
            <li class="page-item"><a class="page-link">3</a></li>
            <li class="page-item"><a class="page-link">Next</a></li>
          </ul>
        </div>
      </div>
    </section>
  </main>

  <!-- Create/Edit Coupon Modal -->
  <div class="modal fade" id="couponModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <form action="/admin/create-coupon" method="POST"> 
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Create Coupon</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Code</label>
              <input type="text" name="code" class="form-control code" placeholder="SUMMER50" required style="text-transform: uppercase;">
            </div>
            <div class="col-md-6">
              <label class="form-label">Type</label>
              <select name="type" class="form-select" id="couponType">
                <option value="percentage">Percentage (%)</option>
                <option value="fixed">Fixed Amount (₹)</option>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label">Discount Value</label>
              <input type="number" name="value" class="form-control" placeholder="e.g., 20" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Min Order Value</label>
              <input type="number" name="minOrderValue" class="form-control" value="0">
            </div>
            <div class="col-md-6">
              <label class="form-label">Max Discount Amount (For % only)</label>
              <input type="number" name="maxDiscount" class="form-control" placeholder="0 = No limit">
            </div>
            <div class="col-md-6">
              <label class="form-label">Expiry Date</label>
              <input type="date" name="expiryDate" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Usage Limit (Optional)</label>
              <input type="number" name="usageLimit" class="form-control" placeholder="Total uses allowed">
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-dark">Create Coupon</button>
        </div>
      </div>
    </form>
  </div>
</div>

  <script>
    // Simple prefix switch based on type
    document.addEventListener('change', e => {
      if (e.target.id === 'couponType') {
        document.getElementById('valPrefix').textContent = e.target.value === 'Percentage' ? '%' : '$';
      }
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
  // Helper to get element by name for cleaner code
  const getByName = (name) => document.querySelector(`[name="${name}"]`);
  const form = document.querySelector('#couponModal form');
  const modalTitle = document.querySelector('.modal-title');
  const submitBtn = document.querySelector('#couponModal button[type="submit"]');

  function editCoupon(btn) {
    // 1. Get data from button attributes
    const data = btn.dataset;

    // 2. Populate inputs
    getByName('code').value = data.code;
    getByName('type').value = data.type;
    getByName('value').value = data.value;
    getByName('minOrderValue').value = data.min;
    getByName('maxDiscount').value = data.max || '';
    getByName('expiryDate').value = data.expiry;
    getByName('usageLimit').value = data.usage || '';

    // 3. Update Form Action to Edit Route
    form.action = `/admin/coupons/edit/${data.id}`;

    // 4. Update UI Text
    modalTitle.innerText = "Edit Coupon";
    submitBtn.innerText = "Update Coupon";

    // 5. Trigger type change event to update prefix ($ or %)
    document.getElementById('couponType').dispatchEvent(new Event('change'));
  }

  function resetCouponForm() {
    // 1. Clear inputs
    form.reset();

    // 2. Reset Form Action to Create Route
    form.action = "/admin/create-coupon";

    // 3. Reset UI Text
    modalTitle.innerText = "Create Coupon";
    submitBtn.innerText = "Create Coupon";
    
    // 4. Reset prefix default
    document.getElementById('valPrefix').textContent = '%';
  }
</script>
</body>

</html>