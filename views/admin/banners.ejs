<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Admin â€¢ Banners</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    :root {
      --side: 260px;
      --dark: #212529;
      --muted: #6c757d;
    }

    body {
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      background: #f8f9fa;
    }

    .sidebar {
      position: fixed;
      inset: 0 auto 0 0;
      width: var(--side);
      background: #d8d8d8da;
      border-right: 1px solid #e9ecef;
      padding: 20px;
      overflow-y: auto;
    }

    .brand {
      font-weight: 700;
      letter-spacing: .5px;
      color: var(--dark);
      text-decoration: none;
    }

    .nav-aside .nav-link {
      color: #212529;
      padding: 10px 12px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .nav-aside .nav-link.active,
    .nav-aside .nav-link:hover {
      background: #000000da;
      color: #f8f9fa;
      font-weight: 500;
    }

    .content {
      margin-left: var(--side);
      min-height: 100vh;
    }

    .topbar {
      position: sticky;
      top: 0;
      z-index: 10;
      background: #d8d8d8;
      border-bottom: 1px solid #e9ecef;
      text-align: center;
      padding: 10px 0;
      font-size: 1.50rem;
    }

    .banner-preview {
      width: 100px;
      height: 60px;
      object-fit: cover;
      border-radius: 6px;
      border: 1px solid #dee2e6;
    }

    @media (max-width: 992px) {
      .sidebar {
        position: fixed;
        transform: translateX(-100%);
        transition: transform .3s ease;
        z-index: 1000;
      }

      .sidebar.show {
        transform: translateX(0);
      }

      .content {
        margin-left: 0;
      }
    }
  </style>
</head>

<body>
  <aside id="sidebar" class="sidebar">
    <a href="/dashboard" class="brand h4 d-block mb-3">BLKND Admin</a>
    <nav class="nav nav-pills flex-column nav-aside">
      <a class="nav-link" href="/dashboard"><i class="fa-solid fa-gauge-high"></i> Dashboard</a>
      <a class="nav-link" href="/orders"><i class="fa-solid fa-receipt"></i> Orders</a>
      <a class="nav-link" href="/products"><i class="fa-solid fa-shirt"></i> Products</a>
      <a class="nav-link" href="/categories"><i class="fa-solid fa-layer-group"></i> Categories</a>
      <a class="nav-link" href="/customers"><i class="fa-solid fa-user-group"></i> Customers</a>
      <a class="nav-link" href="/coupons"><i class="fa-solid fa-ticket"></i> Coupons</a>
      <a class="nav-link" href="/analytics"><i class="fa-solid fa-chart-line"></i> Analytics</a>
      <a class="nav-link active" href="/admin/banners"><i class="fa-solid fa-image"></i> Banners</a>
      <a class="nav-link" href="/settings"><i class="fa-solid fa-gear"></i> Settings</a>
    </nav>
  </aside>

  <main class="content">
    <header class="topbar">
      <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between py-2">
          <div class="d-flex align-items-center gap-2">
            <button class="btn btn-outline-secondary d-lg-none"
              onclick="document.getElementById('sidebar').classList.toggle('show')">
              <i class="fa-solid fa-bars"></i>
            </button>
            <span class="fw-bold">Banners</span>
          </div>
          <div class="d-flex align-items-center gap-2">
            <div class="dropdown">
              <button class="btn btn-dark btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                <i class="fa-regular fa-user"></i> Admin
              </button>
              <div class="dropdown-menu dropdown-menu-end">
                <a class="dropdown-item" href="/settings">Account</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/logout">Logout</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <section class="container-fluid py-4">
      <div class="row g-4">

        <div class="col-lg-4">
          <div class="card h-100">
            <div class="card-header fw-semibold">Add New Banner</div>
            <div class="card-body">
              <form action="/admin/add-banner" method="POST" enctype="multipart/form-data">

                <div class="mb-3">
                  <label class="form-label small text-muted">Banner Image</label>
                  <input type="file" name="image" class="form-control" required>
                  <div class="form-text">Recommended size: 1920x1080px</div>
                </div>

                <div class="mb-3">
                  <label class="form-label small text-muted">Title (Big Text)</label>
                  <input type="text" name="title" class="form-control" placeholder="e.g. New Arrivals" required>
                </div>

                <div class="mb-3">
                  <label class="form-label small text-muted">Subtitle (Optional)</label>
                  <input type="text" name="subtitle" class="form-control" placeholder="e.g. Spring Collection 2026">
                </div>

                <div class="mb-3">
                  <label class="form-label small text-muted">Link URL (Optional)</label>
                  <input type="text" name="link" class="form-control" placeholder="/shop">
                </div>

                <div class="mb-4">
                  <label class="form-label small text-muted">Display Order</label>
                  <input type="number" name="order" class="form-control" value="0" placeholder="0">
                  <div class="form-text">Lower numbers show first.</div>
                </div>

                <button type="submit" class="btn btn-dark w-100">
                  <i class="fa-solid fa-plus me-2"></i> Upload Banner
                </button>
              </form>
            </div>
          </div>
        </div>

        <div class="col-lg-8">
          <div class="card h-100">
            <div class="card-header fw-semibold">Active Banners</div>
            <div class="table-responsive">
              <table class="table align-middle table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Image</th>
                    <th>Details</th>
                    <th>Order</th>
                    <th class="text-end">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (banners && banners.length> 0) { %>
                    <% banners.forEach(banner=> { %>
                      <tr>
                        <td>
                          <img src="/uploads/banners/<%= banner.image %>" alt="Banner" class="banner-preview">
                        </td>
                        <td>
                          <div class="fw-bold">
                            <%= banner.title %>
                          </div>
                          <% if(banner.subtitle) { %>
                            <div class="small text-muted">
                              <%= banner.subtitle %>
                            </div>
                            <% } %>
                        </td>
                        <td>
                          <span class="badge text-bg-secondary">
                            <%= banner.order %>
                          </span>
                        </td>
                        <td class="text-end">
                          <div class="btn-group btn-group-sm">
                            <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal"
                              data-bs-target="#editBannerModal" data-id="<%= banner._id %>"
                              data-title="<%= banner.title %>" data-subtitle="<%= banner.subtitle %>"
                              data-link="<%= banner.link %>" data-order="<%= banner.order %>">
                              <i class="fa-regular fa-pen-to-square"></i>
                            </button>

                            <button type="submit" class="btn btn-outline-danger" form="delete-form-<%= banner._id %>"
                              onclick="return confirm('Delete this banner?');">
                              <i class="fa-regular fa-trash-can"></i>
                            </button>
                          </div>

                          <form id="delete-form-<%= banner._id %>" action="/admin/delete-banner/<%= banner._id %>"
                            method="POST" class="d-none">
                          </form>
                        </td>
                      </tr>
                      <% }) %>
                        <% } else { %>
                          <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                              <i class="fa-regular fa-image fa-2x mb-3 d-block"></i>
                              No banners found. Add one on the left.
                            </td>
                          </tr>
                          <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

      </div>
    </section>
  </main>
  <div class="modal fade" id="editBannerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit Banner</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="editBannerForm" action="" method="POST" enctype="multipart/form-data">

            <div class="mb-3">
              <label class="form-label small text-muted">Title</label>
              <input type="text" name="title" class="form-control" required>
            </div>

            <div class="mb-3">
              <label class="form-label small text-muted">Subtitle</label>
              <input type="text" name="subtitle" class="form-control">
            </div>

            <div class="mb-3">
              <label class="form-label small text-muted">Link URL</label>
              <input type="text" name="link" class="form-control">
            </div>

            <div class="mb-3">
              <label class="form-label small text-muted">Display Order</label>
              <input type="number" name="order" class="form-control">
            </div>

            <div class="mb-3">
              <label class="form-label small text-muted">Change Image (Optional)</label>
              <input type="file" name="image" class="form-control">
              <div class="form-text">Leave empty to keep the current image.</div>
            </div>

            <div class="d-flex justify-content-end gap-2">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-dark">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    const editBannerModal = document.getElementById('editBannerModal');
    if (editBannerModal) {
      editBannerModal.addEventListener('show.bs.modal', event => {
        // Button that triggered the modal
        const button = event.relatedTarget;

        // Extract info from data-* attributes
        const id = button.getAttribute('data-id');
        const title = button.getAttribute('data-title');
        const subtitle = button.getAttribute('data-subtitle');
        const link = button.getAttribute('data-link');
        const order = button.getAttribute('data-order');

        // Update the modal's content
        const form = document.getElementById('editBannerForm');
        form.action = `/admin/edit-banner/${id}`;

        form.querySelector('[name="title"]').value = title;
        form.querySelector('[name="subtitle"]').value = subtitle || '';
        form.querySelector('[name="link"]').value = link || '';
        form.querySelector('[name="order"]').value = order;
      });
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>