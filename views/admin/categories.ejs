<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Admin â€¢ Categories</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

  <style>
    :root {
      --side: 260px;
      --dark: #212529;
    }

    body {
      background: #f8f9fa;
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }

    .sidebar {
      position: fixed;
      inset: 0 auto 0 0;
      width: var(--side);
      background: #d8d8d8da;
      border-right: 1px solid #e9ecef;
      padding: 20px;
      overflow-y: auto;
      z-index: 1;
    }

    .nav-aside .nav-link {
      color: #212529;
      padding: 10px 12px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .nav-aside .nav-link.active,
    .nav-aside .nav-link:hover {
      background: #000000da;
      color: #fff;
    }

    .content {
      margin-left: var(--side);
    }

    @media(max-width:992px) {
      .sidebar {
        transform: translateX(-100%);
        transition: transform .3s ease;
        z-index: 1000;
      }

      .sidebar.show {
        transform: translateX(0);
      }

      .content {
        margin-left: 0;
      }
    }

    .topbar {
      background: #d8d8d8;
      border-bottom: 1px solid #e9ecef;
      position: sticky;
      padding: 10px 0;
      font-size: 1.50rem;
    }
  </style>
</head>

<body>
  <!-- Sidebar -->
  <aside id="sidebar" class="sidebar">
    <a href="/dashboard" class="brand h4 d-block mb-3">BLKND Admin</a>
    <nav class="nav nav-pills flex-column nav-aside">
      <a class="nav-link" href="/dashboard"><i class="fa-solid fa-gauge-high"></i> Dashboard</a>
      <a class="nav-link" href="/orders"><i class="fa-solid fa-receipt"></i> Orders</a>
      <a class="nav-link" href="/products"><i class="fa-solid fa-shirt"></i> Products</a>
      <a class="nav-link active" href="/categories"><i class="fa-solid fa-layer-group"></i> Categories</a>
      <a class="nav-link" href="/customers"><i class="fa-solid fa-user-group"></i> Customers</a>
      <a class="nav-link" href="/coupons"><i class="fa-solid fa-ticket"></i> Coupons</a>
      <a class="nav-link" href="/analytics"><i class="fa-solid fa-chart-line"></i> Analytics</a>
      <a class="nav-link" href="/settings"><i class="fa-solid fa-gear"></i> Settings</a>
    </nav>
  </aside>

  <main class="content">
    <header class="topbar p-3 d-flex justify-content-between align-items-center">
      <button class="btn btn-outline-secondary d-lg-none"
        onclick="document.getElementById('sidebar').classList.toggle('show')">
        <i class="fa-solid fa-bars"></i>
      </button>
      <h5 class="m-0">Manage Categories</h5>
    </header>

    <section class="container-fluid py-4">

      <!-- Add Category Form -->
      <div class="card mb-4">
        <div class="card-header fw-semibold">Add Category</div>
        <div class="card-body">
          <form method="POST" action="/admin/categories/add_category">

            <input type="text" name="main" placeholder="Main category name" />
            <button type="submit">Save</button>
          </form>

        </div>
      </div>

      <!-- Category List Table -->
      <div class="card">
        <div class="card-header fw-semibold">
          All Categories
        </div>

        <div class="card-body p-0">
          <table class="table table-bordered align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th style="width: 25%;">Main Category</th>
                <th style="width: 50%;">Sub Categories</th>
                <th style="width: 25%;">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% if (categories.length===0) { %>
                <tr>
                  <td colspan="3" class="text-center text-muted py-4">
                    No categories found
                  </td>
                </tr>
                <% } %>

                  <% categories.forEach(cat=> { %>
                    <tr>
                      <!-- MAIN CATEGORY -->
                      <td class="fw-semibold">
                        <%= cat.main %>
                      </td>

                      <!-- SUB CATEGORIES + ADD SUB -->
                      <td>
                        <% if (cat.sub.length> 0) { %>
                          <div class="d-flex flex-wrap gap-1 mb-2">
                            <% cat.sub.forEach((sub, index)=> { %>
                              <span class="badge bg-secondary d-flex align-items-center">
                                <%= sub %>

                                  <a href="/admin/categories/deletesub?categoryId=<%= cat._id %>&index=<%= index %>"
                                    class="btn-close btn-sm ms-1" aria-label="Remove"></a>
                              </span>
                              <% }) %>
                          </div>
                          <% } else { %>
                            <div class="text-muted mb-2">No sub categories</div>
                            <% } %>

                              <!-- ADD SUB BUTTON (CORRECT PLACE) -->
                              <button class="btn btn-sm btn-outline-primary mt-2" data-bs-toggle="modal"
                                data-bs-target="#addSubModal" data-id="<%= cat._id %>">
                                Add Sub
                              </button>
                      </td>

                      <!-- ACTIONS -->
                      <td>
                        <div class="btn-group btn-group-sm">
                          <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal"
                            data-bs-target="#editCategoryModal" data-id="<%= cat._id %>" data-main="<%= cat.main %>"
                            data-sub='<%- JSON.stringify(cat.sub) %>'>
                            <i class="fa-regular fa-pen-to-square"></i>
                          </button>


                          <button class="btn btn-outline-danger" type="button"
                            onclick="window.location.href=`/admin/categories/delete/<%= cat._id %>`">
                            <i class="fa-regular fa-trash-can"></i>
                          </button>

                        </div>
                      </td>
                    </tr>
                    <% }) %>
            </tbody>
          </table>
        </div>
      </div>


    </section>
  </main>

  <!--ADD-SUB Modal -->
  <div class="modal fade" id="addSubModal" tabindex="-1">
    <div class="modal-dialog">
      <form method="POST" id="addSubForm" class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add Sub Category</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <label class="form-label">Sub Category Name</label>
          <input type="text" name="sub" class="form-control" required />
        </div>

        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">
            Cancel
          </button>
          <button class="btn btn-primary" type="submit">
            Add
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Edit sub modal -->
  <div class="modal fade" id="editCategoryModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <form method="POST" action="/admin/categories/edit_category" id="editCategoryForm" class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit Category</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <!-- MAIN CATEGORY -->
          <div class="mb-3">
            <label class="form-label">Main Category</label>
            <input type="text" name="main" id="editMainCategory" class="form-control" required />
          </div>

          <!-- SUB CATEGORIES -->
          <div class="mb-3">
            <label class="form-label">Sub Categories</label>

            <div id="subCategoryList" class="d-flex flex-wrap gap-2 mb-2"></div>

            <div class="input-group">
              <input type="text" id="newSubInput" class="form-control" placeholder="Add new sub category" />
              <button type="button" class="btn btn-outline-primary" id="addSubBtn">
                Add
              </button>
            </div>

            <!-- hidden input to submit array -->
            <input type="hidden" name="sub" id="subCategoriesInput" />
          </div>
        </div>

        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">
            Cancel
          </button>
          <button class="btn btn-primary">
            Save Changes
          </button>
        </div>
      </form>
    </div>
  </div>


  <script>
    const addSubModal = document.getElementById('addSubModal');
    const addSubForm = document.getElementById('addSubForm');

    addSubModal.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget;

      if (!button) {
        console.error('Modal opened without trigger button');
        return;
      }

      const categoryId = button.getAttribute('data-id');

      if (!categoryId) {
        console.error('No category ID found on button');
        return;
      }

      addSubForm.action = `/admin/categories/add_subcategory/${categoryId}`;
      console.log('Form action set to:', addSubForm.action);
    });



  </script>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js">
  </script>


  <script>
  const editModal = document.getElementById("editCategoryModal");
  const mainInput = document.getElementById("editMainCategory");
  const subList = document.getElementById("subCategoryList");
  const subHidden = document.getElementById("subCategoriesInput");
  const newSubInput = document.getElementById("newSubInput");
  const addSubBtn = document.getElementById("addSubBtn");
  const editForm = document.getElementById("editCategoryForm");

  let subs = [];

  function renderSubs() {
    subList.innerHTML = "";
    subs.forEach((s, i) => {
      const badge = document.createElement("span");
      badge.className = "badge bg-secondary d-flex align-items-center gap-2 px-2";
      badge.innerHTML = `
        ${s}
        <button type="button" class="btn-close btn-close-white btn-sm"></button>
      `;
      badge.querySelector("button").onclick = () => {
        subs.splice(i, 1);
        renderSubs();
      };
      subList.appendChild(badge);
    });
    subHidden.value = JSON.stringify(subs);
  }

  editModal.addEventListener("show.bs.modal", e => {
    const btn = e.relatedTarget;
    const id = btn.dataset.id;
    const main = btn.dataset.main;
    subs = JSON.parse(btn.dataset.sub || "[]");

    mainInput.value = main;
    renderSubs();

    editForm.action = `/admin/categories/edit_category/${id}`;
  });

  addSubBtn.addEventListener("click", () => {
    const val = newSubInput.value.trim();
    if (!val || subs.includes(val)) return;
    subs.push(val);
    newSubInput.value = "";
    renderSubs();
  });
</script>

</body>

</html>