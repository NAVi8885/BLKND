<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= product.name %> - BLKND
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      font-family: 'Jost', sans-serif;
    }

    .page-header {
      background-color: #f8f9fa;
      padding: 80px 0 40px;
      margin-bottom: 60px;
    }

    .product-image {
      height: 600px;
      object-fit: cover;
      border-radius: 8px;
    }

    .thumbnail {
      height: 100px;
      object-fit: cover;
      cursor: pointer;
      border-radius: 8px;
      margin-bottom: 10px;
    }

    .thumbnail:hover {
      opacity: 0.7;
    }

    .product-price {
      font-size: 32px;
      font-weight: 700;
      color: #212529;
    }

    .btn-add-cart {
      padding: 15px 40px;
      font-size: 16px;
    }

    /* Extra responsiveness without changing existing styles */
    @media (max-width: 992px) {
      .product-image {
        height: 450px;
      }
    }

    @media (max-width: 768px) {
      .page-header {
        padding: 60px 0 30px;
        margin-bottom: 30px;
      }

      .product-image {
        height: 350px;
      }

      .thumbnail {
        height: 80px;
      }
    }

    @media (max-width: 576px) {
      .product-image {
        height: 280px;
      }

      .thumbnail {
        height: 70px;
      }
    }
  </style>
</head>

<body>
  <div class="top-nav text-white" style="background-color: #212529; padding: 10px 0; font-size: 14px;">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <a href="#" style="color: #fff; text-decoration: none; margin: 0 15px;"><i class="fab fa-facebook"></i></a>
          <a href="#" style="color: #fff; text-decoration: none; margin: 0 15px;"><i class="fab fa-instagram"></i></a>
          <a href="#" style="color: #fff; text-decoration: none; margin: 0 15px;"><i class="fab fa-twitter"></i></a>
        </div>
        <div><span>Free shipping on orders over $50</span></div>
        <% if(!user){ %>
          <div>
            <a href="/login" style="color: #fff; text-decoration: none; margin: 0 15px;">Login</a>
            <a href="/signup" style="color: #fff; text-decoration: none; margin: 0 15px;">Register</a>
          </div>
          <% } else {%>
            <div>
              <p style="margin-bottom: 0rem;">
                <%= user.name %>
              </p>
            </div>
            <% } %>
      </div>
    </div>
  </div>

  <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top"
    style="padding: 20px 0; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
    <div class="container">
      <a class="navbar-brand" href="/" style="font-size: 28px; font-weight: 700;">BLKND</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mx-auto">
          <li class="nav-item"><a class="nav-link" href="/index">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
        </ul>
        <div class="nav-icons d-flex align-items-center">
          <a href="#" data-bs-toggle="modal" data-bs-target="#searchModal"
            style="color: #212529; font-size: 18px; margin-left: 20px;"><i class="fas fa-search"></i></a>
          <a href="/profile" style="color: #212529; font-size: 18px; margin-left: 20px;"><i class="fas fa-user"></i></a>
          <a href="/wishlist" style="color: #212529; font-size: 18px; margin-left: 20px;"><i
              class="fas fa-heart"></i></a>
          <a href="/cart" style="color: #212529; font-size: 18px; margin-left: 20px; position: relative;">
            <i class="fas fa-shopping-cart"></i>
            <span
              style="position: absolute; top: -8px; right: -8px; background: #212529; color: #fff; border-radius: 50%; padding: 2px 6px; font-size: 10px;">
              <%= typeof cartCount !=='undefined' ? cartCount : 0 %>
            </span>
          </a>
        </div>
      </div>
    </div>
  </nav>

  <div class="modal fade" id="searchModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-body">
          <button type="button" class="btn-close float-end" data-bs-dismiss="modal"></button>
          <div class="mt-4">
            <form action="/search" method="get">
              <input name="q" type="search" class="form-control form-control-lg" placeholder="Search products...">
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="page-header">
    <div class="container">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><a href="/index">Home</a></li>
          <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
          <li class="breadcrumb-item active">
            <%= product.name %>
          </li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="container mb-5">
    <div class="row">
      <div class="col-md-1 col-3 order-2 order-md-1 mt-3 mt-md-0">
        <% if (product.image && product.image.length) { %>
          <% product.image.forEach(function(imgUrl, index) { %>
            <img src="<%= imgUrl %>" class="thumbnail img-fluid" alt="Thumbnail <%= index + 1 %>"
              data-full="<%= imgUrl %>">
            <% }); %>
              <% } else { %>
                <!-- Fallback thumbnails if no product images -->
                <img src="https://images.unsplash.com/photo-1515886657613-9f3515b0c78f?w=200"
                  class="thumbnail img-fluid" alt="Thumbnail">
                <img src="https://images.unsplash.com/photo-1515886657613-9f3515b0c78f?w=200"
                  class="thumbnail img-fluid" alt="Thumbnail">
                <img src="https://images.unsplash.com/photo-1515886657613-9f3515b0c78f?w=200"
                  class="thumbnail img-fluid" alt="Thumbnail">
                <% } %>
      </div>
      <div class="col-md-5 col-12 order-1 order-md-2">
        <img
          src="<%= (product.image && product.image.length) ? product.image[0] : 'https://images.unsplash.com/photo-1515886657613-9f3515b0c78f?w=600' %>"
          class="product-image w-100 img-fluid" alt="<%= product.name %>" id="mainProductImage">
      </div>
      <div class="col-md-6 col-12 order-3 mt-4 mt-md-0">
        <h2 class="mb-3">
          <%= product.name %>
        </h2>

        <div class="mb-3">
          <% const rating=typeof averageRating !=='undefined' ? averageRating : 4.5; const fullStars=Math.floor(rating);
            const hasHalf=rating - fullStars>= 0.5;
            %>
            <% for (let i=0; i < fullStars; i++) { %>
              <i class="fas fa-star text-warning"></i>
              <% } %>
                <% if (hasHalf) { %>
                  <i class="fas fa-star-half-alt text-warning"></i>
                  <% } %>
                    <% for (let i=fullStars + (hasHalf ? 1 : 0); i < 5; i++) { %>
                      <i class="far fa-star text-warning"></i>
                      <% } %>
                        <span class="ms-2 text-muted">(
                          <%= typeof reviewCount !=='undefined' ? reviewCount : 0 %> reviews
                            )
                        </span>
        </div>

        <p class="product-price mb-4">
          $<%= product.price %>
        </p>

        <p class="text-muted">
          <%= product.shortDescription || 'A premium product with elevated comfort and modern design.' %>
        </p>

        <form action="/cart/add" method="post">
          <input type="hidden" name="productId" value="<%= product._id %>">

          <% const allSizes=['XS', 'S' , 'M' , 'L' , 'XL' ]; %>

            <div class="mb-4">
              <h6>Size:</h6>
              <div class="btn-group" role="group">

                <% allSizes.forEach(function(size, index) { const available=product.size && product.size.includes(size);
                  %>

                  <input type="radio" class="btn-check" name="size" id="size<%= size %>" value="<%= size %>"
                    <%=available ? '' : 'disabled' %>
                  <%= available && index===0 ? 'checked' : '' %>
                    >

                    <label class="btn <%= available ? 'btn-dark' : 'btn-outline-secondary' %>"
                      style="<%= available ? '' : 'opacity: 0.5; cursor: not-allowed;' %>" for="size<%= size %>">
                      <%= size %>
                    </label>

                    <% }); %>

              </div>
            </div>



            <div class="mb-4">
              <h6>Color:</h6>
              <div class="d-flex gap-2 flex-wrap">
                <% if (product.colors && product.colors.length) { %>
                  <% product.colors.forEach(function(c, index) { %>
                    <button type="button" class="btn btn-light border color-btn"
                      style="width: 40px; height: 40px; background-color: <%= c.code %>;" data-color="<%= c.name %>">
                    </button>
                    <% }); %>
                      <input type="hidden" name="color" id="selectedColorInput" value="<%= product.colors[0].name %>">
                      <% } else { %>
                        <!-- Fallback basic colors -->
                        <button class="btn btn-light border" type="button"
                          style="width: 40px; height: 40px; background-color: #fff;"></button>
                        <button class="btn btn-light border" type="button"
                          style="width: 40px; height: 40px; background-color: #000;"></button>
                        <button class="btn btn-light border" type="button"
                          style="width: 40px; height: 40px; background-color: #6c757d;"></button>
                        <% } %>
              </div>

            </div>

            <div class="mb-4">
              <h6>Quantity:</h6>
              <div class="input-group w-auto">
                <button class="btn btn-outline-dark" type="button" id="qtyMinus">-</button>
                <input type="text" class="form-control text-center" value="1" name="quantity" id="quantityInput"
                  style="width: 60px;">
                <button class="btn btn-outline-dark" type="button" id="qtyPlus">+</button>
              </div>
            </div>

            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-dark btn-add-cart">Add to Cart</button>
              <a href="/wishlist/add/<%= product._id %>" class="btn btn-outline-dark btn-add-cart"><i
                  class="fas fa-heart"></i></a>
            </div>
        </form>

        <div class="mt-4">
          <p><strong>SKU:</strong>
            <%= product.sku || 'N/A' %>
          </p>
          <p><strong>Category:</strong>
            <%= product.category || 'Uncategorized' %>
          </p>
          <p>
            <strong>Tags:</strong>
            <% if (product.tags && product.tags.length) { %>
              <% product.tags.forEach(function(tag, index) { %>
                <%= tag %>
                  <%= index < product.tags.length - 1 ? ', ' : '' %>
                    <% }); %>
                      <% } else { %>
                        None
                        <% } %>
          </p>
        </div>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-md-12">
        <ul class="nav nav-tabs mb-4" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#description">Description</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#reviews">
              Reviews (<%= typeof reviewCount !=='undefined' ? reviewCount : 0 %>)
            </a>
          </li>
        </ul>

        <div class="tab-content">
          <div id="description" class="tab-pane fade show active">
            <h5>Product Description</h5>
            <p>
              <%= product.description || 'No additional description available for this product.' %>
            </p>

            <% if (product.features && product.features.length) { %>
              <h6>Features:</h6>
              <ul>
                <% product.features.forEach(function(feat) { %>
                  <li>
                    <%= feat %>
                  </li>
                  <% }); %>
              </ul>
              <% } else { %>
                <h6>Features:</h6>
                <ul>
                  <li>Premium quality materials</li>
                  <li>Comfortable everyday fit</li>
                  <li>Durable construction</li>
                  <li>Easy to care for</li>
                  <li>Available in multiple sizes</li>
                </ul>
                <% } %>
          </div>

          <!-- Keep reviews static for now, can be made dynamic later -->
          <div id="reviews" class="tab-pane fade">
            <h5>Customer Reviews</h5>
            <div class="border-bottom pb-3 mb-3">
              <div class="d-flex justify-content-between">
                <h6>John Doe</h6>
                <div>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                </div>
              </div>
              <p class="text-muted mb-2">October 10, 2025</p>
              <p>Excellent quality! Fits perfectly and the fabric is very comfortable.</p>
            </div>
            <div class="border-bottom pb-3 mb-3">
              <div class="d-flex justify-content-between">
                <h6>Jane Smith</h6>
                <div>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="fas fa-star text-warning"></i>
                  <i class="far fa-star text-warning"></i>
                </div>
              </div>
              <p class="text-muted mb-2">October 8, 2025</p>
              <p>Great product! Would definitely recommend.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <footer style="background-color: #212529; color: #fff; padding: 60px 0 20px;">
    <div class="container">
      <div class="row">
        <div class="col-md-3 mb-3 mb-md-0">
          <h5>KAIRA</h5>
          <p style="color: #adb5bd;">Your premier destination for fashion and style.</p>
        </div>
        <div class="col-md-3 mb-3 mb-md-0">
          <h5>Quick Links</h5>
          <ul style="list-style: none; padding: 0;">
            <li style="margin-bottom: 10px;"><a href="/about" style="color: #adb5bd; text-decoration: none;">About
                Us</a></li>
            <li style="margin-bottom: 10px;"><a href="/shop" style="color: #adb5bd; text-decoration: none;">Shop</a>
            </li>
            <li style="margin-bottom: 10px;"><a href="/contact"
                style="color: #adb5bd; text-decoration: none;">Contact</a></li>
          </ul>
        </div>
        <div class="col-md-3 mb-3 mb-md-0">
          <h5>Customer Service</h5>
          <ul style="list-style: none; padding: 0;">
            <li style="margin-bottom: 10px;"><a href="/profile" style="color: #adb5bd; text-decoration: none;">My
                Account</a></li>
          </ul>
        </div>
        <div class="col-md-3">
          <h5>Newsletter</h5>
          <form>
            <div class="input-group">
              <input type="email" class="form-control" placeholder="Your email">
              <button class="btn btn-light" type="submit">Subscribe</button>
            </div>
          </form>
        </div>
      </div>
      <hr style="border-color: rgba(255,255,255,0.1); margin: 30px 0;">
      <div class="text-center">
        <p style="color: #adb5bd;">&copy; 2025 Kaira. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Thumbnail click -> change main image
    (function () {
      const mainImage = document.getElementById('mainProductImage');
      const thumbnails = document.querySelectorAll('.thumbnail[data-full]');
      thumbnails.forEach(function (thumb) {
        thumb.addEventListener('click', function () {
          const newSrc = this.getAttribute('data-full');
          if (newSrc && mainImage) {
            mainImage.src = newSrc;
          }
        });
      });
    })();

    // Quantity increment / decrement
    (function () {
      const minusBtn = document.getElementById('qtyMinus');
      const plusBtn = document.getElementById('qtyPlus');
      const qtyInput = document.getElementById('quantityInput');

      if (!qtyInput) return;

      function parseQty() {
        const val = parseInt(qtyInput.value, 10);
        if (isNaN(val) || val < 1) return 1;
        return val;
      }

      if (minusBtn) {
        minusBtn.addEventListener('click', function () {
          let q = parseQty();
          if (q > 1) {
            qtyInput.value = q - 1;
          }
        });
      }

      if (plusBtn) {
        plusBtn.addEventListener('click', function () {
          let q = parseQty();
          qtyInput.value = q + 1;
        });
      }
    })();

    // Color selection (only if you use color buttons)
    (function () {
      const colorButtons = document.querySelectorAll('.color-btn');
      const colorInput = document.getElementById('selectedColorInput');
      if (!colorButtons.length || !colorInput) return;

      colorButtons.forEach(function (btn) {
        btn.addEventListener('click', function () {
          const selected = this.getAttribute('data-color');
          if (!selected) return;
          colorInput.value = selected;

          colorButtons.forEach(b => b.classList.remove('border-dark'));
          this.classList.add('border-dark');
        });
      });

      // mark first as selected visually
      if (colorButtons[0]) {
        colorButtons[0].classList.add('border-dark');
      }
    })();
  </script>
</body>

</html>