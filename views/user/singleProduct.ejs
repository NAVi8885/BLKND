    const btnText = document.getElementById('btnText');
    const resultImg = document.getElementById('generatedImage');
    const placeholder = document.getElementById('placeholderText');
    const userPhotoInput = document.getElementById('userPhotoInput');
    const cachedBadge = document.getElementById('cachedBadge');
    const modelBadge = document.getElementById('modelBadge');
    const modelName = document.getElementById('modelName');
    const discardBtn = document.getElementById('discardBtn');

    // Validate file size
    if (userPhotoInput.files[0]) {
        const fileSize = userPhotoInput.files[0].size / 1024 / 1024; // in MB
        if (fileSize > 10) {
            alert('File size must be less than 10MB');
            return;
        }
    }
    
    // UI Loading State
    btn.disabled = true;
    loader.classList.remove('d-none');
    btnText.textContent = " Processing...";
    placeholder.innerHTML = '<i class="fas fa-spinner fa-spin fa-2x mb-3"></i><br>AI is generating your look...<br><small class="text-muted">This may take 15-30 seconds</small>';
    resultImg.classList.add('d-none');
    cachedBadge.classList.add('d-none');
    modelBadge.classList.add('d-none');
    discardBtn.classList.add('d-none');

    const formData = new FormData(this);

    try {
        const response = await fetch('/try-on', {
            method: 'POST',
            body: formData
        });

        const data = await response.json();

        if (data.success) {
            resultImg.src = data.image;
            resultImg.classList.remove('d-none');
            placeholder.classList.add('d-none');
            discardBtn.classList.remove('d-none');
            
            // Show model badge
            if (data.model) {
                modelName.textContent = data.model;
                modelBadge.classList.remove('d-none');
            }
            
            // Show cached badge if it was cached
            if (data.cached) {
                cachedBadge.classList.remove('d-none');
            }
            
            console.log('✅ Try-on successful! Model:', data.model);
        } else {
            if (data.isServiceError) {
                 placeholder.innerHTML = `
                    <div class="text-center p-3">
                        <i class="fas fa-server fa-3x mb-3 text-warning"></i>
                        <h5 class="text-muted">AI Service Busy</h5>
                        <p class="small text-muted mb-0">${data.msg}</p>
                        <small class="text-secondary mt-2 d-block">Please try again in a few minutes.</small>
                    </div>`;
                 alert("⚠️ External AI Service Unavailable:\n\n" + data.msg);
            } else {
                alert(data.msg || "Something went wrong");
                placeholder.innerHTML = `<i class="fas fa-exclamation-triangle fa-2x mb-3 text-warning"></i><br>${data.msg || 'Generation failed. Try again.'}`;
            }
        }
    } catch (error) {
        console.error(error);
        alert("Server error. Please try again later.");
        placeholder.innerHTML = '<i class="fas fa-exclamation-circle fa-2x mb-3 text-danger"></i><br>Server error. Please try again.';
    } finally {
        // Reset UI
        btn.disabled = false;
        loader.classList.add('d-none');
        btnText.textContent = "Generate Look";
    }
});

// 3. Handle Discard
document.getElementById('discardBtn').addEventListener('click', async function() {
    if (!confirm('Are you sure you want to discard this image?')) return;
    
    const productId = '<%= product._id %>';
    const resultImg = document.getElementById('generatedImage');
    const placeholder = document.getElementById('placeholderText');
    const cachedBadge = document.getElementById('cachedBadge');
    const modelBadge = document.getElementById('modelBadge');
    const discardBtn = document.getElementById('discardBtn');
    
    try {
        const response = await fetch('/discard-try-on', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId })
        });
        
        const data = await response.json();
        
        if (data.success) {
            // Reset UI to default state
            resultImg.src = "";
            resultImg.classList.add('d-none');
            placeholder.innerHTML = '<i class="fas fa-image fa-3x mb-3 text-secondary"></i><br>Result will appear here';
            placeholder.classList.remove('d-none');
            cachedBadge.classList.add('d-none');
            modelBadge.classList.add('d-none');
            discardBtn.classList.add('d-none');
            
            // Reset file input
            document.getElementById('userPhotoInput').value = "";
        } else {
            alert('Failed to discard: ' + (data.msg || 'Unknown error'));
        }
    } catch (err) {
        console.error(err);
        alert('Network error');
    }
});
</script>
