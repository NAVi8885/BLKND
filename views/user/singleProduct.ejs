    try {
        const response = await fetch('/get-try-on-status', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId })
        });
        const data = await response.json();

        if (data.success && data.image) {
            // Show cached result
            resultImg.src = data.image;
            resultImg.classList.remove('d-none');
            placeholder.classList.add('d-none');
            cachedBadge.classList.remove('d-none');
            discardBtn.classList.remove('d-none');
            
            // Show which model was used
            if (data.model) {
                modelName.textContent = data.model;
                modelBadge.classList.remove('d-none');
            }
            
            console.log('✓ Loaded cached try-on result');
        }
    } catch (err) {
        console.log('No existing try-on found');
    }
}

