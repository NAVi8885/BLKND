    body {
      font-family: 'Jost', sans-serif;
    }

    .page-header {
      background-color: #f8f9fa;
      padding: 80px 0 40px;
      margin-bottom: 60px;
    }

    .product-image {
      height: 600px;
      object-fit: cover;
      border-radius: 8px;
    }

    .thumbnail {
      height: 100px;
      object-fit: cover;
      cursor: pointer;
      border-radius: 8px;
      margin-bottom: 10px;
    }

    .thumbnail:hover {
      opacity: 0.7;
    }

    .product-price {
      font-size: 32px;
      font-weight: 700;
      color: #212529;
    }

    .btn-add-cart {
      padding: 15px 40px;
      font-size: 16px;
    }

    /* Extra responsiveness without changing existing styles */
    @media (max-width: 992px) {
      .product-image {
        height: 450px;
      }
    }

    @media (max-width: 768px) {
      .page-header {
        padding: 60px 0 30px;
        margin-bottom: 30px;
      }

      .product-image {
        height: 350px;
      }

      .thumbnail {
        height: 80px;
      }
    }

    @media (max-width: 576px) {
      .product-image {
        height: 280px;
      }

      .thumbnail {
        height: 70px;
      }
    }

    /* Star Rating CSS */
    .star-rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
    }
    .star-rating input {
        display: none;
    }
    .star-rating label {
        color: #ccc;
        cursor: pointer;
        padding: 0 2px;
        font-size: 1.5rem;
        transition: color 0.2s;
    }
    .star-rating label:hover,
    .star-rating label:hover ~ label,
    .star-rating input:checked ~ label {
        color: #ffc107;
    }
  </style>
</head>

