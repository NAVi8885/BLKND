<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders - BLKND</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body { font-family: 'Jost', sans-serif; }
        .page-header { background-color: #f8f9fa; padding: 80px 0 40px; margin-bottom: 60px; }
        /* Sidebar Styles */
        .profile-sidebar { background-color: #f8f9fa; padding: 20px; border-radius: 8px; }
        .profile-sidebar .nav-link { color: #212529; padding: 12px 20px; border-radius: 6px; margin-bottom: 5px; }
        .profile-sidebar .nav-link:hover { background-color: #e9ecef; }
        .profile-sidebar .nav-link.active { background-color: #212529; color: #fff; }
        
        /* Avatar Styles */
        .profile-avatar-wrapper { position: relative; width: 130px; height: 130px; margin: 0 auto; }
        .profile-avatar, .avatar-initial { width: 130px; height: 130px; border-radius: 50%; object-fit: cover; }
        .avatar-initial { background: #111; color: white; display: flex; justify-content: center; align-items: center; font-size: 44px; font-weight: 600; }
        
        /* Order Card Styles */
        .order-card { border: 1px solid #eee; padding: 20px; border-radius: 8px; margin-bottom: 20px; transition: box-shadow 0.3s ease; }
        .order-card:hover { box-shadow: 0 5px 15px rgba(0,0,0,0.05); }
        .badge-pending { background-color: #ffc107; color: #000; }
        .badge-shipped { background-color: #17a2b8; color: #fff; }
        .badge-delivered { background-color: #198754; color: #fff; }
        .badge-cancelled { background-color: #dc3545; color: #fff; }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top"
        style="padding: 20px 0; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
        <div class="container">
            <a class="navbar-brand" href="/index" style="font-size: 28px; font-weight: 700;">BLKND</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item"><a class="nav-link" href="/index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>
                    <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
                </ul>
                <div class="nav-icons d-flex align-items-center">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#searchModal"
                        style="color: #212529; font-size: 18px; margin-left: 20px;"><i class="fas fa-search"></i></a>
                    <a href="/profile" style="color: #212529; font-size: 18px; margin-left: 20px;"><i
                            class="fas fa-user"></i></a>
                    <a href="/wishlist" style="color: #212529; font-size: 18px; margin-left: 20px;"><i
                            class="fas fa-heart"></i></a>
                    <a href="/cart" style="color: #212529; font-size: 18px; margin-left: 20px; position: relative;">
                        <i class="fas fa-shopping-cart"></i>
                        <span
                            style="position: absolute; top: -8px; right: -8px; background: #212529; color: #fff; border-radius: 50%; padding: 2px 6px; font-size: 10px;">0</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>
    
    <div class="page-header">
        <div class="container">
            <h1 class="mb-2">My Orders</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index">Home</a></li>
                    <li class="breadcrumb-item"><a href="/profile">Profile</a></li>
                    <li class="breadcrumb-item active">Orders</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="container mb-5">
        <div class="row">
            <div class="col-lg-3">
                <div class="profile-sidebar">
                    <div class="profile-section text-center mb-4">
                        <div class="profile-avatar-wrapper">
                            <% if (user.profilePic) { %>
                                <img src="<%= user.profilePic %>" class="profile-avatar" alt="Profile">
                            <% } else { %>
                                <div class="avatar-initial">
                                    <%= user.name ? user.name[0].toUpperCase() : user.email[0].toUpperCase() %>
                                </div>
                            <% } %>
                        </div>
                        <h5 class="mt-3 fw-bold"><%= user.name %></h5>
                        <p class="text-muted small mb-1"><%= user.email %></p>
                    </div>

                    <nav class="nav flex-column">
                        <a class="nav-link" href="/profile"><i class="fas fa-user me-2"></i> Profile</a>
                        <a class="nav-link active" href="/userorders"><i class="fas fa-shopping-bag me-2"></i> Orders</a>
                        <a class="nav-link" href="/useraddress"><i class="fas fa-map-marker-alt me-2"></i> Addresses</a>
                        <a class="nav-link" href="/usersetting"><i class="fas fa-cog me-2"></i> Settings</a>
                        <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt me-2"></i> Logout</a>
                    </nav>
                </div>
            </div>
            
            <div class="col-lg-9">
                <div class="card mb-4 border-0">
                    <div class="card-body p-0">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h4 class="mb-0">Order History</h4>
                            <select class="form-select w-auto" id="orderFilter">
                                <option value="All Orders">All Orders</option>
                                <option value="Delivered">Delivered</option>
                                <option value="Processing">Processing</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                        </div>
                        
                        <div id="orders-container">
                            <% if (orders && orders.length > 0) { %>
                                <% orders.forEach(order => { %>
                                    <div class="order-card">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div>
                                                <h5 class="mb-1">Order #<%= order._id.toString().slice(-6).toUpperCase() %></h5>
                                                <p class="text-muted mb-0 small">Placed on <%= new Date(order.createdAt).toLocaleDateString() %></p>
                                            </div>
                                            <% 
                                                let badgeClass = 'bg-secondary';
                                                if(order.orderStatus === 'delivered') badgeClass = 'badge-delivered';
                                                else if(order.orderStatus === 'cancelled') badgeClass = 'badge-cancelled';
                                                else if(order.orderStatus === 'shipped') badgeClass = 'badge-shipped';
                                                else if(order.orderStatus === 'pending') badgeClass = 'badge-pending';
                                            %>
                                            <span class="badge <%= badgeClass %> rounded-pill px-3 py-2"><%= order.orderStatus.charAt(0).toUpperCase() + order.orderStatus.slice(1) %></span>
                                        </div>
                                        <hr class="text-muted opacity-25">
                                        
                                        <% order.items.forEach(item => { %>
                                            <div class="row align-items-center mb-3">
                                                <div class="col-md-2">
                                                    <% if(item.productId && item.productId.image && item.productId.image.length > 0) { %>
                                                        <img src="<%= item.productId.image[0] %>" style="width: 70px; height: 70px; object-fit: cover; border-radius: 6px;" alt="Product">
                                                    <% } else { %>
                                                        <div style="width: 70px; height: 70px; background: #eee; border-radius: 6px; display: flex; align-items: center; justify-content: center;">
                                                            <i class="fas fa-image text-muted"></i>
                                                        </div>
                                                    <% } %>
                                                </div>
                                                <div class="col-md-5">
                                                    <h6 class="mb-1"><%= item.name || 'Product Name' %></h6>
                                                    <p class="text-muted small mb-0">Qty: <%= item.quantity %></p>
                                                </div>
                                                <div class="col-md-2">
                                                    <p class="mb-0 fw-bold">₹<%= item.price %></p>
                                                </div>
                                                <div class="col-md-3 text-end">
                                                    </div>
                                            </div>
                                        <% }) %>
                                        
                                        <hr class="text-muted opacity-25">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-muted">Total Amount</span>
                                            <strong class="fs-5">₹<%= order.totalAmount %></strong>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <i class="fas fa-shopping-bag fa-3x text-muted mb-3"></i>
                                    <h5>No orders found</h5>
                                    <p class="text-muted">You haven't placed any orders yet.</p>
                                    <a href="/shop" class="btn btn-dark mt-2">Start Shopping</a>
                                </div>
                            <% } %>
                        </div>
                        </div>
                </div>
            </div>
        </div>
    </div>

     <footer style="background-color: #212529; color: #fff; padding: 60px 0 20px;">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h5>BLKND</h5>
                    <p style="color: #adb5bd;">Your premier destination for fashion and style.</p>
                </div>
                <div class="col-md-3">
                    <h5>Quick Links</h5>
                    <ul style="list-style: none; padding: 0;">
                        <li style="margin-bottom: 10px;"><a href="/about" style="color: #adb5bd; text-decoration: none;">About Us</a></li>
                        <li style="margin-bottom: 10px;"><a href="/shop" style="color: #adb5bd; text-decoration: none;">Shop</a></li>
                        <li style="margin-bottom: 10px;"><a href="/contact" style="color: #adb5bd; text-decoration: none;">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Customer Service</h5>
                    <ul style="list-style: none; padding: 0;">
                        <li style="margin-bottom: 10px;"><a href="/profile" style="color: #adb5bd; text-decoration: none;">My Account</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Newsletter</h5>
                    <form>
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Your email">
                            <button class="btn btn-light" type="submit">Subscribe</button>
                        </div>
                    </form>
                </div>
            </div>
            <hr style="border-color: rgba(255,255,255,0.1); margin: 30px 0;">
            <div class="text-center">
                <p style="color: #adb5bd;">&copy; 2025 BLKND. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.getElementById('orderFilter').addEventListener('change', async function() {
            const status = this.value;
            const container = document.getElementById('orders-container');
            
            // Show loading state
            container.style.opacity = '0.5';

            try {
                const response = await fetch(`/user/orders/filter?status=${encodeURIComponent(status)}`);
                const data = await response.json();

                if (data.success) {
                    container.innerHTML = ''; // Clear current orders

                    if (data.orders.length === 0) {
                        container.innerHTML = `
                            <div class="text-center py-5">
                                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                                <h5>No orders found</h5>
                                <p class="text-muted">No orders match the selected filter.</p>
                            </div>`;
                    } else {
                        // Rebuild HTML from JSON data
                        data.orders.forEach(order => {
                            // Determine badge class
                            let badgeClass = 'bg-secondary';
                            if(order.orderStatus === 'delivered') badgeClass = 'badge-delivered';
                            else if(order.orderStatus === 'cancelled') badgeClass = 'badge-cancelled';
                            else if(order.orderStatus === 'shipped') badgeClass = 'badge-shipped';
                            else if(order.orderStatus === 'pending') badgeClass = 'badge-pending';

                            // Format Date
                            const date = new Date(order.createdAt).toLocaleDateString();

                            // Build Items HTML
                            let itemsHtml = '';
                            order.items.forEach(item => {
                                const imageSrc = (item.productId && item.productId.image && item.productId.image.length > 0) 
                                    ? item.productId.image[0] 
                                    : ''; // Handle missing image logic in CSS or placeholder
                                
                                const imgElement = imageSrc 
                                    ? `<img src="${imageSrc}" style="width: 70px; height: 70px; object-fit: cover; border-radius: 6px;" alt="Product">`
                                    : `<div style="width: 70px; height: 70px; background: #eee; border-radius: 6px; display: flex; align-items: center; justify-content: center;"><i class="fas fa-image text-muted"></i></div>`;

                                itemsHtml += `
                                    <div class="row align-items-center mb-3">
                                        <div class="col-md-2">${imgElement}</div>
                                        <div class="col-md-5">
                                            <h6 class="mb-1">${item.name || 'Product'}</h6>
                                            <p class="text-muted small mb-0">Qty: ${item.quantity}</p>
                                        </div>
                                        <div class="col-md-2">
                                            <p class="mb-0 fw-bold">₹${item.price}</p>
                                        </div>
                                        <div class="col-md-3 text-end"></div>
                                    </div>
                                `;
                            });

                            // Build Full Card HTML
                            const orderHtml = `
                                <div class="order-card">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h5 class="mb-1">Order #${order._id.toString().slice(-6).toUpperCase()}</h5>
                                            <p class="text-muted mb-0 small">Placed on ${date}</p>
                                        </div>
                                        <span class="badge ${badgeClass} rounded-pill px-3 py-2">
                                            ${order.orderStatus.charAt(0).toUpperCase() + order.orderStatus.slice(1)}
                                        </span>
                                    </div>
                                    <hr class="text-muted opacity-25">
                                    ${itemsHtml}
                                    <hr class="text-muted opacity-25">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-muted">Total Amount</span>
                                        <strong class="fs-5">₹${order.totalAmount}</strong>
                                    </div>
                                </div>
                            `;
                            container.insertAdjacentHTML('beforeend', orderHtml);
                        });
                    }
                }
            } catch (error) {
                console.error('Error fetching orders:', error);
                alert('Failed to load orders');
            } finally {
                container.style.opacity = '1';
            }
        });
    </script>
</body>
</html>